            <li>
                <a id="lnkBtnSignOut" href="@Url.Action("LogOut", "BlackAndWhiteHeaderMenu")" >@Html.Raw(Html.GetKeyValueFromResourceFile("lout", UserCookieManager.WBStoreId, "Log Out"))</a>

@{
    Layout = null;
    
}
@using MPC.Webstore.Common;
<div id="bonhamsControl"  class="content_area container">
    <div class="left_right_padding">

        <ul class="bonhamsMenu navM cursor_pointer">
            <li>
                <a href="/">@Html.Raw(Html.GetKeyValueFromResourceFile("HfHome", UserCookieManager.WBStoreId, "Home"))
</a>

            </li>
            <li>
                <a href="/ContactDetail">@Html.Raw(Html.GetKeyValueFromResourceFile("EditDetails", UserCookieManager.WBStoreId, "Edit My Details"))</a>

            </li>


            <li>
                <a href="/SavedDesigns">@Html.Raw(Html.GetKeyValueFromResourceFile("Savprojects", UserCookieManager.WBStoreId, "Saved Projects"))</a>

            </li>
            <li>
                <a id="orderRedirectLink" href="/ProductOrderHistory">@Html.Raw(Html.GetKeyValueFromResourceFile("HistryBtn", UserCookieManager.WBStoreId, "Order History"))</a>

            </li>
            <li>
                <a href="/Dashboard">@Html.Raw(Html.GetKeyValueFromResourceFile("opencatg", UserCookieManager.WBStoreId, "Open Catelogue"))</a>

            </li>
            <li>
                <a href="/ShopCart">@Html.Raw(Html.GetKeyValueFromResourceFile("shopingbask", UserCookieManager.WBStoreId, "My Shopping Basket"))</a>


    function ApplyDiscountVouchers() {
        var txtDiscountVoucher = $("#txtDiscountVoucherCode").val();
        if(txtDiscountVoucher == ""){
            $("#lblRedeemErrorMesg").text("Please enter Voucher Code to proceed.");
            return false;//ShowPopUp("Message", "Please enter Voucher Code to proceed.");
        }else{
            ShowLoader();

            var storeId = @UserCookieManager.WBStoreId;
            var orderId = @ViewBag.OrderID;
            var OrgId = @UserCookieManager.WEBOrganisationID;
            console.log(txtDiscountVoucher + " "  +  storeId + " " + orderId);
            var data = { DiscountVoucher: txtDiscountVoucher, StoreId:storeId, OrderId: orderId, OrganisationId: OrgId };
            $.ajax({
                type: "GET",
                url: "/webstoreapi/DiscountVoucher/ValidateDiscountVouchers",
                contentType: "application/json",
                data: data,
                async: true,
                success: function (response) {
                    if(response[0] == "Error"){
                        $("#lblRedeemErrorMesg").html("<p class='cantApplyVMesg'>@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlcantapplyvoucher", UserCookieManager.WBStoreId, "Can't apply the voucher because:"))<br /></p><p class='voucherErrorDesc' >" + response[1] + "</p>");
                        HideLoader();
                    }else if(response[0] == "Free"){
                        $("#hfFreeShippingVoucherId").val(response[1]);
                        $("#lblCalculatedDelivery").text("Free Shipping");
                        $("#lblDeliveryToBeCal").text("Free Shipping");

                        $("#txtDiscountVoucherCode").css("display", "none");
                        $("#btnApplyDiscountVoucherCode").css("display", "none");
                        $("#lblRedeemErrorMesg").css("display", "none");
                        $("#btnRemoveDeliveryVoucherCode").css("display", "block");
                        HideLoader();
                    }else if(response[0] == "Success"){
                        window.location.href = "/ShopCart?OrderId=" + orderId + "&VCId=1";
                    }
                }
            });
        }
    }

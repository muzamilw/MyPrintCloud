@using MPC.Webstore.Common;
<style type="text/css">
    .activeCampaigns {
        width: 25%;
        height: 175px;
        background-color: #e9501d;
        float: right;
        padding-top: 14px;
        text-align: center;
        color: white;
    }

    .campaignsHeading {
        font-size: 25px;
        font-family: PT Sans;
    }

    .campaignsLabel {
        font-size: 15px;
        font-family: PT Sans;
    }
</style>

<div class="content_area" id="bannerContainer" style="width: 100%; height: 200px; position: relative; z-index: 50;">
    <div style="float: left; width: 75%; z-index: 0; position: relative; text-align:center;">
        <ul id="mycarousel" class="jcarousel-skin-tango">
            @foreach (var listing in ViewData["Listings"] as List<MPC.Webstore.Controllers.RealEstateItemController.RealEstateListing>)
            {
                <li>
                    <a id="hlItemUrl">
                        <div style="height: 120px;">
                            <img id="imgBanner" src="@listing.ListingImageURL" style="height: 100px; width: 150px;" />
                        </div>
                    </a>
                    <div>
                        <label style="font-family: PT Sans; font-size: 17px; color: #e9501d;">@listing.ListingProperty.PropertyName</label>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="activeCampaigns" style="z-index: 1; position: relative;">
        <div>
            <label id="lbl_ActiveCompaigns" class="campaignsHeading">@Html.Raw(Html.GetKeyValueFromResourceFile("lblActiveCompaigns", UserCookieManager.StoreId))</label>
        </div>
        <div style="padding-top:15px;">
            <img src="~/Content/Images/SmartFormCart.png" /><br />
        </div>
        <div style="padding-top:20px;" class="campaignsLabel">
            <label id="lbl_Youhave">@Html.Raw(Html.GetKeyValueFromResourceFile("lblYouhave", UserCookieManager.StoreId))</label>
            
            <label id="lbl_items">@Html.Raw(Html.GetKeyValueFromResourceFile("lblitems", UserCookieManager.StoreId))</label>
            <a id="lbl_CeheckOut" href="#">@Html.Raw(Html.GetKeyValueFromResourceFile("lblCeheckOut", UserCookieManager.StoreId))</a>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mycarousel').jcarousel();
        });
    </script>
}

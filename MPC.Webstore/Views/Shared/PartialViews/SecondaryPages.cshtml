@model MPC.Models.DomainModels.CmsPage
@{
    string AppBasePath = string.Empty;
}

@if (Model != null)
{
    <div id="PageBanner">
        @AppBasePath = @System.Web.Configuration.WebConfigurationManager.AppSettings["AppBasePath"] + @Model.PageBanner
        <img id="imgPageBanner" src="@AppBasePath" />
    </div>
    <div id="SecondryPageMainContent">
        <div class="content_area container">
            <div class="left_right_padding row">
                <div class="SP_transparent rounded_corners">
                    <div class="product_detail_sup_padding">
                        <h1 class="SecPagesHeading ">
                            <label id="ltlHeading">@Model.PageName</label>
                        </h1>
                        <div class="paddingLeft10px">
                            <label id="lblPageContents">@Model.PageHTML</label>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>

}


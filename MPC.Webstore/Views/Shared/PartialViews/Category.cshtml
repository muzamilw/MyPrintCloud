                                <div id="Div1" onclick="hidePopup2()" class="MesgBoxBtnsDisplay rounded_corners5">
                                    @Html.Raw(Html.GetKeyValueFromResourceFile("lblClose", UserCookieManager.WBStoreId, "Close"))
                                </div>
                                <div class="clearBoth">
                                    &nbsp;
                                </div>
                                <div class="SolidBorderCS">
                                    &nbsp;

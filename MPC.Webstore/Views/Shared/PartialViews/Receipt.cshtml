                        <span id="lbl_OrderDate" class="spnOrderHeadings">@Html.Raw(Html.GetKeyValueFromResourceFile("spnorderdate", UserCookieManager.WBStoreId)) </span>
                    </div>
                    <label id="lblOrderDate" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px; line-height: 34px; margin-left: 5px;">@OrderDate</label>
                    <div class="clearBoth">
                        &nbsp;
                    </div>
                    <div class="shopReceiptOrderDetails">
                        <span id="lbl_OrderCode" class="spnOrderHeadings">@Html.Raw(Html.GetKeyValueFromResourceFile("spnordernum", UserCookieManager.WBStoreId))</span>
                    </div>
                    <label id="lblOrderCode" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px; line-height: 34px; margin-left: 5px;">@Model.OrderCode</label>
                    <div class="clearBoth">
                        &nbsp;
                    </div>
                    <div class="shopReceiptOrderDetails">
                        <span id="lbl_InvoiceDate" class="spnOrderHeadings">@Html.Raw(Html.GetKeyValueFromResourceFile("spninvoicedate", UserCookieManager.WBStoreId))</span>
                    </div>
                    <label id="lblInvoiceDate" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px; line-height: 34px; margin-left: 5px;">@OrderDate</label>
                    <div class="clearBoth">
                        &nbsp;
                    </div>
                    <div class="shopReceiptOrderDetails">
                        <span id="lbl_PlacedBy" class="spnOrderHeadings">@Html.Raw(Html.GetKeyValueFromResourceFile("spnplacedby", UserCookieManager.WBStoreId)) </span>
                    </div>
                    <label id="lblPlacedBy" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px; line-height: 34px; margin-left: 5px;">@Model.PlacedBy</label>
                    <div class="clearBoth">
                        &nbsp;
                    </div>
                    <div class="shopReceiptOrderDetails">
                        <span id="lbl_YourRer" class="spnOrderHeadings"> @Html.Raw(Html.GetKeyValueFromResourceFile("ltlReference", UserCookieManager.WBStoreId))</span>
                    </div>
                    <label id="lblYourRefNum" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px; line-height: 34px; margin-left: 5px;">@Model.YourRef</label>
                    <div class="clearBoth">
                        &nbsp;
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12 receiptbillingShippingcnt" style="line-height: 30px;">
                    <span id="lbl_ReceiptbillTo" style="" class="shopReceiptBillToHeading">@Html.Raw(Html.GetKeyValueFromResourceFile("spnbilledto", UserCookieManager.WBStoreId))</span><br />
                    <label id="lblCustName" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.CustomerName</label><br />
                    <label id="lblBAddressLine1" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.BillingAdress.Address1</label><br />
                    @if (!string.IsNullOrEmpty(Model.BillingAdress.Address2))
                    {
                        <div><label id="lblAddressLine2" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.BillingAdress.Address2</label></div>
                    }

                    <label id="lblBcity" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.BillingAdress.City</label>
                    @if (Model.BillingAdress.State != null)
                    {
                        <label id="lblBState" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.BillingAdress.State.StateName</label>
                    }
                    @if (Model.BillingAdress.Country != null)
                    {
                        <label id="lblBCountry" style="color: black;  font-style: normal; font-weight: bold; font-size: 12px;">@Model.BillingAdress.Country.CountryName</label>
                    }
                    <br />

@model MPC.Webstore.Models.ContactViewModel
@using MPC.Webstore.Common;
<div class="container content_area">
    <div class="left_right_padding">
        <div class="contact_us_heading">
            <label id="lbl_ContactUs">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_ContactUs", UserCookieManager.StoreId))</label>

        </div>
        <div class="white-container-lightgrey-border textAlignLeft rounded_corners">
            <div class="cont_us_pad">

                <table width="100%" cellpadding="5" cellspacing="0">
                    <tr>
                        <td valign="top">
                            <div id="ContactImage" class="contact_item_image float_left">
                                &nbsp;
                            </div>
                            <div class="float_left cntContactImagetxt">
                                @if (ViewBag.Organisation.Tel != null)
                                {
                                    <label id="lbl_Tel">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Tel", UserCookieManager.StoreId))</label>
                                    <label>@ViewBag.Organisation.Tel</label><br />
                                }

                                @if (ViewBag.Organisation.Fax != null)
                                {
                                    <label id="lbl_Fax">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Fax", UserCookieManager.StoreId))</label>
                                    <label>@ViewBag.Organisation.Fax</label><br />
                                }
                            </div>
                            <br />
                            <div class="dashboard_vertical_item_separator">
                                &nbsp;
                            </div>
                            <div id="EmailImage" class="email_item_image float_left">
                                &nbsp;
                            </div>
                            <div class="float_left cntEmailImageCntctUS">
                                <label id="lbl_Email">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Email", UserCookieManager.StoreId))</label>
                                <label>@ViewBag.Organisation.Email</label><br />
                            </div>
                            <div class="dashboard_vertical_item_separator">
                                &nbsp;
                            </div>
                            <div id="HomeImage" class="home_item_image float_left">
                                &nbsp;
                            </div>
                            <div class="float_left cntAddressContactUS">
                                <label id="lblCompanyName">@ViewBag.Organisation.OrganisationName</label>
                                <br />
                                <label id="lblAddressLine1">@ViewBag.Organisation.Address1</label><br />
                                <label id="lblAddressLine2">@ViewBag.Organisation.Address2</label>
                                <label id="LblCity">@ViewBag.Organisation.City</label>
                                <label id="lblState">@ViewBag.Organisation.State</label><br />
                                <label id="lblCountry">@ViewBag.Organisation.Country</label><br />
                                <label id="lblZipCode">@ViewBag.Organisation.ZipCode</label>
                            </div>
                        </td>
                        <td valign="top" align="right">
                            <div id="imgmapContainer" class="MapPanel rounded_corners" style="display:none">
                                <img id="imgGoogleImage" style="display:none" />
                            </div>
                            <div id="gMapContainer" class="rounded_corners cntgMapContactUs">
                                <div id="gMap" class="rounded_corners gMapContactUs"></div>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div id="contactusform" class="white-container-lightgrey-border textAlignLeft rounded_corners">
            <div class="get_in_touch_heading">
                <label id="lbl_GetInTouch">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_GetInTouch", UserCookieManager.StoreId))</label>
            </div>
            @ViewBag.Message
            <div class="get_in_touch_sub_padding">
                @using (Html.BeginForm())
                {

                    <table width="100%" cellpadding="5" cellspacing="5">
                        <tr>
                            <td>
                                <label id="lbl_Person_Name">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Person_Name", UserCookieManager.StoreId))</label>
                            </td>
                            <td>
                                <div style="display:none"><label id="lbl_Enquiry_Nature">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Enquiry_Nature", UserCookieManager.StoreId))</label></div>

                                <label id="lbl_Enquiry">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_Enquiry", UserCookieManager.StoreId))</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.TextBoxFor(u => u.YourName, new { @class = "text_box400 rounded_corners5" })

                            </td>
                            <td rowspan="5" valign="top">
                                <div style="display:none">
                                    <select id="ddlEnqiryNature" class="dropdown rounded_corners5" style="width:200px;">
                                        <option>General</option>
                                        <option>Need a Quote</option>
                                        <option>Design inquiry</option>
                                        <option>Book studio/ design time</option>
                                        <option>Status on delivery</option>
                                    </select>

                                </div>
                                @Html.TextBoxFor(u => u.YourEnquiry, new { @class = "text_box400 rounded_corners5" })
                            </td>
                        </tr>
                        <tr>
                            <td>

                                <label id="lbl_CompanyName">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_CompanyName", UserCookieManager.StoreId))</label>
                                <asp:literal id="ltrlcompany" text=""></asp:literal>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                @Html.TextBoxFor(u => u.CompanyName, new { @class = "text_box400 rounded_corners5" })

                            </td>

                        </tr>
                        <tr>
                            <td>
                                <label>Your email</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.TextBoxFor(u => u.Email, new { @class = "text_box400 rounded_corners5" })

                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td align="right">
                                <input type="submit" class="start_creating_btn rounded_corners5" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>


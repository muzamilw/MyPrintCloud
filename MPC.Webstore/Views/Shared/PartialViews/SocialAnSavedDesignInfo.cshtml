@model MPC.Models.DomainModels.Company
@{
    Layout = null;

}
<div class="socialAndSavedCnt">
    <div class="container content_area">
        <div class="left_right_padding col-sm-12">
            <div class="txtAlignLeft col-xs-12 col-md-2 col-sm-2  col-lg-2 social_icons" style="margin-top: 6px;">

                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        @if (Model.FacebookURL != null && Model.FacebookURL != string.Empty)
                        {
                            <td valign="middle">
                                <a id="linkFollowUs1" href="@Model.FacebookURL" target="_blank">
                                    <img id="imgFollowUs1" src="/Content/Images/facebookNew.png" class="imgFollowUs" height="20" />
                                </a>
                            </td>
                        }
                        @if (Model.TwitterURL != null && Model.TwitterURL != string.Empty)
                        {
                            <td valign="middle">
                                <a id="linkFollowUs2" href="@Model.TwitterURL" target="_blank">
                                    <img id="imgFollowUs2" class="imgFollowUs" height="20" src="/Content/Images/TwitterNew.png" />
                                </a>
                            </td>
                        }
                        @if (Model.LinkedinURL != null && Model.LinkedinURL != string.Empty)
                        {
                            <td valign="middle">
                                <a id="linkFollowUs3" href="@Model.LinkedinURL" target="_blank">
                                    <img id="imgFollowUs3" class="imgFollowUs" height="20" src="/Content/Images/LinkedInNew.png" />
                                </a>
                            </td>
                        }
                    </tr>
                </table>
            </div>
            <div class="txtAlignLeft col-xs-12 col-md-10 col-sm-10  col-lg-10" style="padding-right: 0px !important;">

                <div class="countryImgCntContainer">
                    <img src="~/Content/Images/United-Kingdom-icon.png" />
                </div>
                @if (ViewBag.isUserLoggedIn)
                {
                    <a href="/SavedDesigns">
                        <div class="savedDesignCntContainer">
                            <span>@ViewBag.CountOfSavedDesign</span>
                        </div>
                    </a>


                }
                else
                {

                        <div class="savedDesignCntContainer">
                            <span>0</span>
                        </div>
                   
                }
               
                <span class="float_right spantxtSD">Saved designs</span>

                <div class="clearBoth">&nbsp;</div>
            </div>
        </div>
    </div>
</div>

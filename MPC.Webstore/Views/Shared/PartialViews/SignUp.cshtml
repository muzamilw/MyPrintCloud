@model  MPC.Webstore.Models.RegisterViewModel
@using MPC.Webstore.Common;

    <div class="container content_area">

        <div class="row left_right_padding">

            <div class="signin_heading_div  col-md-12 col-lg-12 col-xs-12">
                <label ID="lbl_newCoustomerReg" Class="sign_in_heading">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_newCoustomerReg", UserCookieManager.StoreId))</label>
            </div>
            <div class="page_border_div rounded_corners col-md-12 col-lg-12 col-xs-12">
                <div class="sign_up_page_box">
                    <div class="SignUpLeftPanel col-md-6 col-lg-6 col-xs-12">


                        <div id="lbl_RegisterUsing" class="mainHeadingAveniorCheckout">@Html.Raw(Html.GetKeyValueFromResourceFile("lbl_RegisterUsing", UserCookieManager.StoreId))</div>
                        <div class="clearBoth">&nbsp;</div>
                   
                        <div id="cntSocialLink" class="cntSignInWithSocialinks">
                            <em id="emfacebook" class="emfb"></em>


                            <input id="facebookbtn" type="button" value="Sign up with Facebook" class="connectWithfb" onclick="SocialSignUp(1)" /><br />


                            <script>
                            function SocialSignUp(isFacebook) {
                                var w = 820;
                                var h = 560;
                                var left = (screen.width / 2) - (w / 2);
                                var top = (screen.height / 2) - (h / 2);
                                if (isFacebook == 1)
                                         window.open("/Home/oAuth?id=1&isRegWithSM=1&MarketBriefReturnURL=@ViewBag.ReturnURL", "_blank", "toolbar=yes, scrollbars=yes, resizable=yes, width=" + w + ", height=" + h + ", top=" + top + ", left=" + left);
                                    else
                                        window.open("/Home/oAuth?id=0&isRegWithSM=1&MarketBriefReturnURL=@ViewBag.ReturnURL", "_blank", "toolbar=yes, scrollbars=yes, resizable=yes, width=" + w + ", height=" + h + ", top=" + top + ", left=" + left);
                                    return false;
                                }
                            </script>
                            <em id="emtwtter" class="emTw"></em>
                            <input id="facebookbtn" type="button" value="Sign up with Twitter" class="connectWithtwitter" onclick="SocialSignUp(0)" /><br />
                            <br />
                            <br />
                            <div id="cntOrBottom">
                                -OR-
                            </div>
                        </div>
                        <div class="clearBoth">&nbsp;</div>
                        <div id="lbl_SignUp" class="mainHeadingAveniorCheckout">@Html.Raw(Html.GetKeyValueFromResourceFile("registerFor", UserCookieManager.StoreId))</div>
                        @{
                            bool isSocialSignUp = Convert.ToBoolean(ViewData["IsSocialSignUp"]);
                            if (isSocialSignUp == true)
                            {
                                <div id="lbl_CompleteYourRegisteration" class="errorMessage mainHeadingAveniorCheckout">@Html.Raw(Html.GetKeyValueFromResourceFile("registerFor", UserCookieManager.StoreId)) @ViewBag.CompanyName</div>
                            }
                           
                          }

                      
                        <p id="lblSignupMessage" class="errorMessage">@ViewBag.Message</p>
                        <br />
                        @using (Html.BeginForm())
                        {
                         
                           
                            bool isSocial = Convert.ToBoolean(ViewData["IsSocialSignUp"]);
                            if (isSocial == true)
                            {
                               
                                <input type="hidden" name="hfIsSocial" id="isSocial" value="1" />
                            }
                            else
                            {
                               
                                <input type="hidden" name="hfIsSocial" id="isSocial" value="0" />
                            }
                            

                            <div id="MessageBox"></div>
                         
                            @Html.TextBoxFor(model => model.FirstName, new { id = "FirstName", @class = "smallTxtBox cntRegisterFN", @placeholder = ViewData.ModelMetadata.DisplayName })
           
                            @Html.ValidationMessageFor(u => u.FirstName,string.Empty, new { @style = "color:red" })

                            @Html.TextBoxFor(model => model.LastName, new { id = "LastName", @class = "smallTxtBox", @placeholder = "Last Name" })
                            <br />
                            @Html.ValidationMessageFor(u => u.LastName, string.Empty, new { @style = "color:red" })
                             @Html.TextBoxFor(model => model.Phone, new { id = "Phone", @class = "txtBoxLoginPage", @placeholder = "Phone" })
                            <br />
                            @Html.ValidationMessageFor(u => u.Phone, string.Empty, new { @style = "color:red" })
                            @Html.TextBoxFor(model => model.Email, new { id = "Email", @class = "txtBoxLoginPage", @placeholder = "Email"})
                            <br />
                           
                            @Html.ValidationMessageFor(u => u.Email, string.Empty, new { @style = "color:red;" })
                             @Html.PasswordFor(model => model.Password, new { id = "Password", @class = "txtBoxLoginPage",@placeholder = "Password" }) <br />
                             <br />
                            @Html.ValidationMessageFor(u => u.Password, string.Empty, new { @style = "color:red;" })<br />
                            <input id="cmdRegister" type="submit" class="start_creating_btn_CretAcc registerAccountBtn rounded_corners5" value="CREATE ACCOUNT" /><br />

                            <div class="clear">
                                &nbsp;
                            </div>
                        <input type="hidden" name="hfReturnURL" id="hfReturnURL" value="@ViewBag.ReturnURL" />
                        }
                      
                    </div>
                    <div class="signup_width col-md-6 col-lg-6 col-xs-12">
                        <div class="BackgroundColor">
                            <div class="custom_color_heading" id="lbl_WhyRegister">
                                @Html.Raw(Html.GetKeyValueFromResourceFile("lbl_WhyRegister", UserCookieManager.StoreId))
                            </div>
                            <div class="space5">
                                &nbsp;
                            </div>

                            <p id="lbl_ByRegisteringMessage" class="registering_label">@Html.Raw(Html.GetKeyValueFromResourceFile("lblRegistering", UserCookieManager.StoreId))</p>
                            <div class="registering_item_register" id="divsaveurdeisgn">
                                <div class="tickImge">&nbsp;</div>

                                <p id="lbl_SaveDesign" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlsaveurdesign", UserCookieManager.StoreId))</p>
                            </div>
                            <div class="registering_item_separator">
                                &nbsp;
                            </div>
                            <div class="registering_item_register">
                                <div class="tickImge">&nbsp;</div>

                                <p id="lbl_OrderHistory" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlviewtoh", UserCookieManager.StoreId))</p>
                            </div>
                            <div class="registering_item_separator">
                                &nbsp;
                            </div>
                            <div class="registering_item_register">
                                <div class="tickImge">&nbsp;</div>

                                <p id="lbl_Reorder" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("divreorderq", UserCookieManager.StoreId))</p>
                            </div>
                            <div class="registering_item_separator">
                                &nbsp;
                            </div>
                            <div class="registering_item_register">
                                <div class="tickImge">&nbsp;</div>

                                <p id="lbl_NewLetter" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("divsubs2newsl", UserCookieManager.StoreId))</p>
                            </div>
                            <div class="registering_item_separator">
                                &nbsp;
                            </div>
                            <div class="registering_item_register">
                                <div class="tickImge">&nbsp;</div>

                                <p id="lbl_RequestQuote" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("hlRequestQuote", UserCookieManager.StoreId))</p>
                            </div>
                            <div class="registering_item_separator">
                                &nbsp;
                            </div>
                            <div class="registering_item">
                                <div class="tickImge">
                                    &nbsp;
                                </div>
                                <p id="lbl_Voucher" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlNewVoucherPromo", UserCookieManager.StoreId))</p>
                            </div>
                        </div>
                    </div>
                    <div class="clearBoth">
                    </div>
                </div>
                <br />
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>

   
            var text = $("#txtOrderPolicy").val();

            $.ajax({

                type: "POST",
                url: "/PersonalDetailAndOrderPolicy/SaveOrderPolicy?id=" + text + ""

            });
            HideLoader();
        }
        function Cancel() {
            HideLoader();
        }
    </script>
}



@model List<MPC.Models.DomainModels.CompanyBanner>
@using MPC.Webstore.Common;
@{
    Layout = null;
}

<script src="/Content/HomeBannerS4.js"></script>


<div id="bannerContainer" class="">
    <script src="/Scripts/jquery.fancybox-1.3.4.pack.js"></script>
    @*<script type="text/javascript" src="../Scripts/fancybox/jquery.fancybox-1.3.4.pack.js"></script>*@
    <link href="/Content/jquery.fancybox-1.3.4.css" rel="stylesheet" type="text/css" media="screen" />
    <script src="/Scripts/jquery.jcarousel.lite.js"></script>
    @*<script type="text/javascript" src="../Scripts/jquery.jcarousel.lite.js"></script>*@
    @*<script src="../Scripts/HomeBannerS4.js" type="text/javascript"></script>*@

    <div class="body">
        <div id="page">
            <div id="content">
                <div class="billboard">
                    <div class="top-shadow" style="height: 330px; padding: 25px 0 0 0;">
                        <div class="intro">
                            <h1 style="margin-top: 20px; font-size: 30px; margin-bottom: -5px;" class="introHeading">
                                .
                            </h1>
                            <p class="introDescription">
                                .
                            </p>
                            <ul style="margin-top: 34px;">
                                <li class="btn_start_creating_Slider">
                                    <a href="" class="order-now btn_start_creating_Slider_txt ">
                                        Start Creating
                                       
                                        <img src="/Content/Images/Start-Now-Blue-Button.png" alt="Start Now" />
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div id="sliderBillBoard">
                            <img style="position: absolute; left: 0; top: 0; z-index: 1; margin: -3px 0 0 6px;"
                                 src="/Content/Images/slider-lens-and-shadow.png" />
                            <a class="video-link" href="http://www.youtube.com/">
                                <img class="video-corner" src="/Content/Images/VideoCorner.png"
                                     alt="Watch Videos Now" />
                            </a>
                            <div id="slides">
                                <a class="arrowS4 left" id="prev">
                                    <img src="/Content/Images/Next-Slider-Left-Button.png" alt="Prev" />

                                </a>
                                <a class="arrowS4 right" id="next">
                                    <img src="/Content/Images/Next-Slider-Right-Button.png" alt="Next" />
                                </a>
                                <ul>
                                    @foreach (var banner in Model)
                                    {
                                        <li>
                                            <img id="img1" src="@banner.ImageURL" class="sliderImgClass" alt="" />
                                            <label id="bndes" class="sliderDescription">@banner.Description</label>
                                            <label id="bnhead" class="sliderTitle">@banner.Heading</label>
                                            <label id="bnrefUrl" class="sliderRefrenceUrl">@banner.ButtonURL</label>
                                            <label id="btnVidUrl" class="sliderVideoUrl">@banner.ItemURL</label>
                                        </li>
                                    }
                                </ul>

                            </div>
                        </div>
                        <div class="relax">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearBoth">
</div>
















    

                    </div>
                    <div class="registering_item">
                        <div class="tickImge">
                            &nbsp;
                        </div>
                        <p id="ltrlviewtoh" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlviewtoh", UserCookieManager.WBStoreId, "View and track order history"))</p>
                    </div>
                    <div class="registering_item">
                        <div class="tickImge">

@model  MPC.Webstore.Models.AccountViewModel
@using MPC.Webstore.Common;

@{ Layout = null;}
<div class="container content_area">
    <div id="loginpage" class="white-container-lightgrey-border  rounded_corners">
        <div class="sign_up_page_box NoPadding">
            <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                <div id="lblSignWithSM" class="mainHeadingAveniorCheckout">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlsigninwithaccount", UserCookieManager.StoreId))</div>
                <div class="clearBoth">&nbsp;</div>
                <div id="cntSocialLink" class="cntSignInWithSocialinks">
                    <em id="emfacebook" class="emfb"></em>


                    <input id="facebookbtn" type="button" value="Sign in with Facebook" class="connectWithfb" onclick="OpenNewWindow(1)" /><br />


                    <script>
    function OpenNewWindow(isFacebook) {

        var w = 820;
        var h = 560;
        var left = (screen.width / 2) - (w / 2);
        var top = (screen.height / 2) - (h / 2);
        if (isFacebook == 1)
            window.open("/Home/oAuth?id=1&isRegWithSM=0&MarketBriefReturnURL=@ViewBag.ReturnURL", "_blank", "toolbar=yes, scrollbars=yes, resizable=yes, width=" + w + ", height=" + h + ", top=" + top + ", left=" + left);
                            else
              window.open("/Home/oAuth?id=0&isRegWithSM=0&MarketBriefReturnURL=@ViewBag.ReturnURL", "_blank", "toolbar=yes, scrollbars=yes, resizable=yes, width=" + w + ", height=" + h + ", top=" + top + ", left=" + left);
                            return false;
                        }
                    </script>
                    <em id="emtwtter" class="emTw"></em>
                    <input id="twitterBtn" type="button" value="Sign in with Twitter" onclick="OpenNewWindow(0)" class="connectWithtwitter " />
                    <br />
                    <br />
                    <div id="cntOrBottom">
                        -OR-
                    </div>
                </div>
                <div id="cntOrRight" class="visible-lg visible-md hidden-sm hidden-xs">
                    -OR-
                </div>
                <div class="clear">
                    &nbsp;
                </div>
                <div class="mainHeadingAveniorCheckout">
                    @Html.Raw(Html.GetKeyValueFromResourceFile("lblSignIntoComapny", UserCookieManager.StoreId))
                </div>
                @using (Html.BeginForm())
                {
                   
                             
                    <div id="MessageBox"></div>
                    <div class="errorMesgLoginPage">
                        @ViewBag.Message<br />
                        @Html.ValidationMessageFor(u => u.Email)<br />
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>

                    @Html.TextBoxFor(model => model.Email, new { id = "Email", @class = "txtBoxLoginPage txtEmailBox", @placeholder = "Email" })

                    @Html.PasswordFor(model => model.Password, new { id = "Password", @class = "txtBoxLoginPage txtPassBox", @placeholder = "Password" }) <br />

                    <br />
                    <div id="cntStaySignedin">
                        @Html.CheckBoxFor(model => model.KeepMeLoggedIn, new { id = "rememberMe" })
                        <label for="rememberMe">@Html.Raw(Html.GetKeyValueFromResourceFile("keepMe", UserCookieManager.StoreId))</label>
                    </div>
              
                    <div id="divBtnContainer" style="margin-top: 20px;">
                        <div class="divwidth">
                            <a class="forgetPassLink" id="lnkForgotPassword" href="/ForgotPassword">@Html.Raw(Html.GetKeyValueFromResourceFile("lnkForgotPassword", UserCookieManager.StoreId))</a>
                        </div>
                        <div class="divwidthset">
                            <input id="cmdLogin" type="submit" class="start_creating_btn_Login rounded_corners5" value="Login" onclick="ShowLoader();" /><br />
                        </div>
                        <div class="clear">
                            &nbsp;
                        </div>
                    </div>
    <input type="hidden" name="hfReturnURL" id="hfReturnURL" value="@ViewBag.ReturnURL" />
                }
           
            </div>
        </div>
        <div class="col-md-6 col-lg-6 col-xs-12 col-sm-12">
            @if (ViewBag.AllowRegisteration == 1)
            {
                <div class="containerRegisternow">
                    <input type="button" class="SignUpButton rounded_corners5" onclick="location.href='/SignUp'" />
                </div>
            }
            <div class="divDontHaveAccont rounded_corners5">
                <p id="lblRegistering" class="mainHeadingAveniorCheckout" style="font-size: 19px !important; margin-bottom: 0px !important;">@Html.Raw(Html.GetKeyValueFromResourceFile("lblRegistering", UserCookieManager.StoreId))</p>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlsaveurdesign" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlsaveurdesign", UserCookieManager.StoreId))</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlviewtoh" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlviewtoh", UserCookieManager.StoreId))</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlroq" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("divreorderq", UserCookieManager.StoreId))</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlsubscribe2Nwzl" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("divsubs2newsl", UserCookieManager.StoreId))</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="lblTitleRequestQuote" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("hlRequestQuote", UserCookieManager.StoreId))</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlNewVoucherPromo" class="smallAveniorLogin">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlNewVoucherPromo", UserCookieManager.StoreId))</p>
                </div>
                <div class="clearBoth"></div>
            </div>
        </div>
        <div class="clearBoth">
            &nbsp;
        </div>
    </div>
</div>
<script>
    function updateSuccess(data) {
        if (data == "Success") {
            window.location.href = "/Home/Index";
        }
    }
</script>
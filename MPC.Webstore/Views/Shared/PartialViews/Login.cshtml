@model  MPC.Webstore.Models.AccountModel
<div class="white-container-lightgrey-border  rounded_corners">
    <div class="sign_up_page_box NoPadding">
        <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
            <div id="lblSignWithSM" class="mainHeadingAveniorCheckout">Sign in using</div>
            <div class="clearBoth">&nbsp;</div>
            <div id="cntSocialLink" class="cntSignInWithSocialinks">
                <em id="emfacebook" class="emfb"></em>
                <input id="facebookbtn" type="button" value="Sign in with Facebook" class="connectWithfb" /><br />

                <em id="emtwtter" class="emTw"></em>
                <input id="twitterBtn" type="button" value="Sign in with Twitter" class="connectWithtwitter " />
                <br />
                <br />
                <div id="cntOrBottom">
                    -OR-
                </div>
            </div>
            <div id="cntOrRight" class="visible-lg visible-md hidden-sm hidden-xs">
                -OR-
            </div>
            <div class="clear">
                &nbsp;
            </div>
            <div class="mainHeadingAveniorCheckout">
                Sign in to CompanyName
            </div>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <div class="errorMesgLoginPage">
                    @ViewBag.Message
                </div>

                @Html.TextBoxFor(model => model.Email, new { id = "txtEmail", @class = "txtBoxLoginPage txtEmailBox", @Value = "Email" })
             
                @Html.TextBoxFor(model => model.Password, new { id = "txtPassword", @class = "txtBoxLoginPage txtPassBox", @Value = "Password" }) <br />
              
                <br />
                <div id="cntStaySignedin">
                    @Html.CheckBoxFor(model => model.KeepMeLoggedIn, new { id = "rememberMe" })
                    <label for="rememberMe">Keep me logged in</label>
                </div>
                <div id="divBtnContainer" style="margin-top: 20px;">
                    <div class="divwidth">
                        <a class="forgetPassLink" id="lnkForgotPassword" href="/ForgotPassword">Forgot your Password?</a>
                    </div>
                    <div class="divwidthset">
                        <input id="cmdLogin" type="submit" class="start_creating_btn_Login rounded_corners5" value="Login" /><br />

                    </div>
                    <div class="clear">
                        &nbsp;
                    </div>

                </div>
            }
        </div>
        <div class="col-md-6 col-lg-6 col-xs-12 col-sm-12">
            <div class="containerRegisternow">
                <input type="button" class="SignUpButton rounded_corners5" />
            </div>
            <div class="divDontHaveAccont rounded_corners5">
                <p id="lblRegistering" class="mainHeadingAveniorCheckout" style="font-size: 19px !important; margin-bottom: 0px !important;">By registering you are able to:</p>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlsaveurdesign" class="smallAveniorLogin">Save your designs</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlviewtoh" class="smallAveniorLogin">View and track order history</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlroq" class="smallAveniorLogin">Re-order quickly</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlsubscribe2Nwzl" class="smallAveniorLogin">Subscribe to our Newsletters on new marketing products and services</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="lblTitleRequestQuote" class="smallAveniorLogin">Request a quote</p>
                </div>
                <div class="registering_item">
                    <div class="tickImge">
                        &nbsp;
                    </div>
                    <p id="ltrlNewVoucherPromo" class="smallAveniorLogin">Get latest Voucher promotions</p>
                </div>
                <div class="clearBoth"></div>
            </div>
        </div>
        <div class="clearBoth">
            &nbsp;
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#txtEmail").focus(function () {
            alert()
            if ($("#txtEmail").val() === 'Email') {
                $("#txtEmail").val('');
            }
        });
        $("#txtEmail").blur(function () {
            if ($("#txtEmail").val() === '') {

                $("#txtEmail").val("Email");
            }
        });

        $('#txtPassword').focus(function () {
            if ($('#txtPassword').val() === 'Password') {
                $('#txtPassword').attr("type", "password");
                $('#txtPassword').val('');
            }
        });

        $('#txtPassword').blur(function () {
            if ($('#txtPassword').val() === '') {
                $('#txtPassword').removeAttr("type");
                $('#txtPassword').val('Password');
            } else {
                $('#txtPassword').attr("type", "password");
            }
        });
    </script>
}

@model MPC.Webstore.Models.AddressViewModel
@using MPC.Webstore.Common;
@{
    Layout = null;
}
@if (ViewBag.Display == "1")
{<footer>
        <div class="container">
            @if (Model != null)
            {
                <div class="footerCol">
                    <h1>@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlgetintouch", UserCookieManager.WBStoreId, "Get in touch"))</h1>
                    <p>
                        @if (Model.Tel != null)
                        {
                            @Model.Tel<br />
                        }
                        @if (Model.Email != null)
                        {
                            @Model.Email<br />
                        }
                        @ViewBag.StoreName<br>
                        @Model.Address1<br>
                        @if (Model.Address2 != null)
                        {
                            @Model.Address2<br>
                        }
                        @Model.City<br>
                        @Model.ZipCode
                    </p>
                </div>
            }

            <div class="footerCol">
                <h1>@Html.Raw(Html.GetKeyValueFromResourceFile("lblOpeningTimes", UserCookieManager.WBStoreId, "Opening Times"))</h1>
                <p>
                    @Html.Raw(ViewBag.Notes)
                </p>
            </div>
            <div class="footerCol">
                <h1>@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlproductsss", UserCookieManager.WBStoreId, "Products"))</h1>
                <ul>
                    @foreach (var categories in ViewData["parentCatList"] as List<MPC.Models.DomainModels.ProductCategory>)
                    {
                        <li><a href="/Category/@Utils.specialCharactersEncoder(categories.CategoryName)/@categories.ProductCategoryId">@categories.CategoryName</a></li>

                    }

                </ul>
            </div>
            <div class="footerCol">
                <h1>@Html.Raw(Html.GetKeyValueFromResourceFile("lblUsefulLinks", UserCookieManager.WBStoreId, "Useful Links"))</h1>
                @foreach (var item in ViewData["PageCategory"] as List<MPC.Models.DomainModels.PageCategory>)
                {
                   
                        if (ViewData["CmsPage"] != null)
                        {
                            <ul >
                            @foreach (var page in ViewData["CmsPage"] as List<MPC.Models.Common.CmsPageModel>)
                            {
                                if (page.CategoryId == item.CategoryId)
                                {
                                    
                                       
                                        <li><a href="/pages/@Utils.specialCharactersEncoder(page.PageTitle)/@page.PageId">@page.PageTitle</a></li>
                                       
                                    
                                }
                            }
                            </ul>
                        }

                }
               
            </div>
        </div>
    </footer>

}
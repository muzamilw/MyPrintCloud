@model MPC.Models.DomainModels.Company
@using MPC.Webstore.Common;
@using MPC.Models.Common;
@using System;


<header class="navbar navbar-default topnav" id="TopHeaderContainer"  role="navigation">
    <div class="container">
        <div class="navbar-header col-md-3 col-lg-3 col-xs-12 col-sm-12">
            <button type="button" class="navbar-toggle btn btn-darkblue hidden-lg hidden-md" id="darkCollapseBtn" data-toggle="collapse" data-target=".navbar-collapse"><span class="fa fa-bars fa-fw"></span></button>
            @*<button type="button" class="btn btn-darkblue leftbar-toggle pull-left" data-toggle="offcanvas" onclick="showSideBar();"><span class="fa fa-th-large fa-fw" onclick="showSideBar();"></span></button>*@
            <a class="navbar-brand" href='/'>
                <img class="img-responsive" alt="Company" id="imgLogo" src="@Model.Image">
            </a>
        </div>
       
         @if(UserCookieManager.WEBStoreMode==(int)StoreMode.Retail)
         { 
        <div class="navbar-collapse col-md-9 col-lg-9 col-xs-12 col-sm-12" id="oxfordCollapedMenucnt">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/AllProducts" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-list"></i><span>@Html.Raw(Html.GetKeyValueFromResourceFile("lnkProducts", UserCookieManager.WBStoreId))</span></a>
                </li>
                <li><a id="lnkRequestQuoteHeader" href="/RequestQuote" class="" target="_self"><i class="fa fa-pencil"></i><span>@Html.Raw(Html.GetKeyValueFromResourceFile("lblTitleRequestQuote", UserCookieManager.WBStoreId))</span></a></li>
                <li><a href="/ContactUs" class="" target="_self"><i class="fa fa-envelope-o"></i><span>@Html.Raw(Html.GetKeyValueFromResourceFile("lblPageTitle", UserCookieManager.WBStoreId))</span></a></li>
                <li><a id="psop7" href="/Login" title="" class="top_login_popup"><i class="fa fa-user"></i><span>Login / Register </span></a></li>
            </ul>
        </div>
         }
    </div>
</header>

<script>



    $("#darkCollapseBtn").click(function () {

        $("#MainContent_ctl00_oxfordCollapedMenucnt").slideToggle();
    });
    function LoginPopUP() {

        $('#divShd').css("display", "block");

        $('#jqwin').css("display", "block");
        $(".closeBtn_CP").css("display", "block");

        return false;
    }

</script>


            }
            if (!isValid) {
                ShowPopup('@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlMessage", UserCookieManager.WBStoreId, "Message"))', errorMessage);
            }
            return isValid;
        }

        function ValidateRec3() {
            var errorMessage = '';

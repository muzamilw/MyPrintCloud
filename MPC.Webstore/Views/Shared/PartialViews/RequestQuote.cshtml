        });
    }

    function ValidateEmail(email) {
        var isValid = true;
        if (email == '') {
         
            isValid = false;
        }
        else {
            var re = new RegExp("^[A-Za-z0-9](([_\\.\\-]?[a-zA-Z0-9]+)*)@@([A-Za-z0-9]+)(([\\.\\-]?[a-zA-Z0-9]+)*)\\.([A-Za-z]{2,})$");
            if (!re.test(email)) {
              
                isValid = false;
            }
        }
        return isValid;
    }

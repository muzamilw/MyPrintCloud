@using MPC.Webstore.Common
@{
    Layout = null;
    var Company = ViewBag.Company as MPC.Models.DomainModels.Company;
}
<div id="footer" class="footer-content spacer-top">


    <div class="container">
        <p>
            <div class="row">

                <div class="col-xs-12 col-md-6">

                    <div id="social_icon" class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Raw(Html.GetKeyValueFromResourceFile("ltrlgosocial", UserCookieManager.WBStoreId, "Go Social"))</h3>
                        </div>
                        <div class="panel-body">
                            <div class="social">
                                @if(Company.FacebookURL != null && Company.FacebookURL != string.Empty)
                                {
                                    <a href="@Company.FacebookURL" target="_blank">
                                        <img id="SubFacebook" src="/Content/Images/facebookNew.png" />
                                    </a>
                                }
                                @if(Company.TwitterURL != null && Company.TwitterURL != string.Empty)
                                {
                                    <a href="@Company.TwitterURL" target="_blank">
                                        <img id="SubTwitter" src="/Content/Images/TwitterNew.png" />
                                    </a>
                                }
                                @if (Company.LinkedinURL != null && Company.LinkedinURL != string.Empty)
                                {
                                    <a href="@Company.LinkedinURL" target="_blank">
                                        <img id="LinkedINSub" src="/Content/Images/LinkedInNew.png" />
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-info" id="Div2">
                        <div class="panel-heading">
                            <h3 class="panel-title" id="lblOurNews">@Html.Raw(Html.GetKeyValueFromResourceFile("divsubs2newsl", UserCookieManager.WBStoreId, "Subscribe to our Newsletters "))</h3>
                        </div>
                        @using (Html.BeginForm())
                        {
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-envelope"></span></span>

                                        <input id="txtEmailbox" value="@Html.Raw(Html.GetKeyValueFromResourceFile("EemailAdd", UserCookieManager.WBStoreId, "Enter email address..."))"
                                               class="form-control btn-rounded" />

                                    </div>
                                    <label id="lblerrorMsg" class="error-block text-danger"></label>
            <p class="help-block" id="Nwsdesc">@Html.Raw(Html.GetKeyValueFromResourceFile("NewsLetterDescription", UserCookieManager.WBStoreId, "Sign up to our newsletters, and you’ll get a wealth of business tips, inspirational ideas, exclusive special offers and discounts."))</p>
        </div>
        <input id="btnSendNews" type="submit"
               class="btn btn-primary btn-rounded" value="Subscribe" />
    </div>
                        }
                        </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <div class="panel panel-info" id="testimonials">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.Raw(Html.GetKeyValueFromResourceFile("testiiiii", UserCookieManager.WBStoreId, "Testimonials"))</h3>
                                </div>
                                <div class="panel-body">
                                    <div id="testimonial-sidebar-1189832456" data-interval="6000" class="carousel slide testimonial-panel">
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <blockquote>
                                                    <p id="lblRaveReview">


                                                    </p>
                                                    <small id="lblReviewBy">Henry Roberts</small>
                                                </blockquote>
                                            </div>
                                            <div class="item ">
                                                <blockquote>
                                                    <p>
                                                        As a realtor I am in regular need of business cards. I would like to thank you for the artistic work you undertook for printing cards for my real estate business. I appeciate your professional service and fast delivery. Company online printing facility surely does away with all hassles involved in conventional printing.

                                                    </p>
                                                    <small>Kenneth</small>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer"><span class="carousel-controls"><a href="#testimonial-sidebar-1189832456" class='left' data-slide='prev'><span class="glyphicon glyphicon-chevron-left">&nbsp;</span></a><a href="#testimonial-sidebar-1189832456" class='right' data-slide='next'><span class="glyphicon glyphicon-chevron-right">&nbsp;</span></a></span></div>
                            </div>
                        </div>
                        </div>
                        </p>
                        </div>
                        </div>


<div>
    <div class="col-sm-12 form-horizontal">
        <div style="margin-bottom:15px;">
            <div class="tabsdescriptions" style="margin-left:-1px;">
                <p class="group-header-description">Produce delivery receipt to attach to the finished goods. Select multiple delivery locations based on the accounts fixed addresses</p>
            </div>
        </div>
        <div class="col-sm-12" style="padding-left:0px;padding-right:0px;">
            <div class="clearfix">
                <header class="clearfix" style="margin-bottom:20px;">
                    <div class="filter-block pull-right">
                        <a href="#" class="btn btn-primary pull-right" data-bind="click:$root.addDeliverySchedule">
                            Add Delivery Schedule
                        </a>
                    </div>
                </header>
                <div class="table-responsive">

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="col-lg-2"><span>Item</span></th>
                                <th class="col-lg-2"><span>Address</span></th>
                                <th class="col-lg-1"><span>Quantity</span></th>
                                <th class="col-lg-2"><span>Delivery Date</span></th>
                                <th class="col-lg-2">Carrier</th>
                                <th class="col-lg-1">Consignment#</th>
                                <th class="col-lg-1">Delivery Cost</th>
                                <th class="col-lg-1"></th>
                                <th class="col-lg-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!--ko if:$root.selectedOrder().deliverySchedules().length===0-->
                            <tr>
                                <td colspan="8">
                                    <span>No Items found!</span>
                                </td>
                            </tr>
                            <!-- /ko -->
                            <!-- ko template: { name: $root.templateToUseDeliverySchedule , foreach: $root.selectedOrder().deliverySchedules } -->
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="btn-group" style="float: right; margin-top:10px;margin-bottom: 10px;">
                <button type="button" class="btn btn-primary" data-bind="click : $root.onRaised">Raise Delivery Note</button>
            </div>
        </div>
    </div>
    <script id="ediDeliverScheduleTemplate" type="text/html">
        <tr>
            <td style="width: 175px">
                <div>
                    <select class="form-control" data-bind="enable: !deliveryNoteRaised(), options: $root.selectedOrder().nonDeliveryItems , optionsText: 'productName', optionsValue: 'id' ,value:itemId,validationtooltip:itemId"></select>
                    
                </div>
            </td>
            <td style="width: 175px">
                <div>
                    <select class="form-control" data-bind="enable: !deliveryNoteRaised(), options: $root.companyAddresses , optionsText: 'name', optionsValue: 'id',value:addressId,validationtooltip:addressId"></select>
                    
                </div>
            </td>
            
            <td style="width: 175px;">
                <div>
                    <input type="text" class="form-control" data-bind="enable: !deliveryNoteRaised(), value: quantity, validationTooltip: quantity" />
                </div>
            </td>
            <td style="width: 114px;">
                <div>
                    <input type="text" class="form-control" data-bind="enable: !deliveryNoteRaised(), datepicker: deliveryDate" />
                </div>
            </td>
            <td><select class="form-control" data-bind="enable: !deliveryNoteRaised(), options: $root.deliveryCarriers , optionsText: 'CarrierName', optionsValue: 'CarrierId' ,value:carrierId,validationtooltip:carrierId"></select></td>
            <td><input type="text" class="form-control" data-bind="enable: !deliveryNoteRaised(), value: consignmentNumber" /></td>
            <td style="width: 114px;padding-top: 7px">
                <span data-bind="visible:deliveryCost()!==undefined,text: $root.currencySymbol"></span>
                <input type="text" class="form-control" data-bind="enable: !deliveryNoteRaised(), value: deliveryCost" />
            </td>
            @*<td>
                <div class="checkbox-nice">
                    <input type="checkbox" disabled data-bind="checked: deliveryNoteRaised,attr: { id: 'deliveryNoteRaised' + $index() }">
                    <label data-bind="attr: { for: 'deliveryNoteRaised' + $index() }"></label>
                </div>
            </td>*@
            <td style="width: 114px;">
                <div class="checkbox-nice" data-bind="visible:!deliveryNoteRaised()">
                    <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'selected' + $index() }">
                    <label data-bind="attr: { for: 'selected' + $index() }"></label>
                </div>
                <div data-bind="visible:deliveryNoteRaised, text: 'Raised'">
                    
                </div>
                
            </td>
            <td style="width: 75px;">
                <a href="#" class="table-link danger" data-bind="click: $root.onDeleteDeliveryScheduleItem, visible:!deliveryNoteRaised()" title="Delete">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
    </script>
    <script id="itemDeliverScheduleTemplate" type="text/html">
        <tr data-bind="click:$root.selectDeliverySchedule">
            <td style="width: 175px;font-size: 0.875em" data-bind="text: itemName"></td>
            <td style="width: 175px" data-bind="text: addressName"></td>            
            <td style="width: 175px" data-bind="text: quantity"></td>
            <td data-bind="dateString: deliveryDate"></td>
            <td style="width: 175px" data-bind="text: carrierName"></td>
            <td data-bind="text: consignmentNumber"></td>
            <td style="width: 114px"><span data-bind="visible:deliveryCost()!==undefined,text: $root.currencySymbol"></span><span data-bind="numberInput: deliveryCost"></span> </td>
            @*<td>
                <div class="checkbox-nice">
                    <input type="checkbox" disabled data-bind="checked: deliveryNoteRaised,attr: { id: 'deliveryNoteRaised1' + $index() }">
                    <label data-bind="attr: { for: 'deliveryNoteRaised1' + $index() }"></label>
                </div>
            </td>*@
            <td>
                <div class="checkbox-nice" data-bind="visible:!deliveryNoteRaised()">
                    <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'selected1' + $index() }">
                    <label data-bind="attr: { for: 'selected1' + $index() }"></label>
                </div>
                <div data-bind="visible:deliveryNoteRaised, text: 'Raised'">

                </div>
            </td>
            <td style="width: 75px">
                <a href="#" class="table-link danger" data-bind="click: $root.onDeleteDeliveryScheduleItem, visible:!deliveryNoteRaised()" title="Delete">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>

        </tr>
    </script>

</div>



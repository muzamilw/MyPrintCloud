<div>
    <div class="col-lg-12 form-horizontal">
        <h3 class="group-header">Delivery Schedule</h3>
        <div class="col-lg-12">
            <div class="clearfix">
                <header class="main-box-header clearfix">
                    <div class="filter-block pull-right">
                        <a href="#" class="btn btn-primary pull-right" data-bind="click:$root.addDeliverySchedule">
                            Add Delivery Schedule
                        </a>
                    </div>
                    @*<div class="filter-block pull-right">
                            <a href="#" class="btn btn-primary pull-right" data-bind="click:$root.onRaised">
                                Raise
                            </a>
                        </div>*@
                </header>
                <div class="table-responsive">

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="width:175px;"><span>Item</span></th>
                                <th style="width: 175px;"><span>Address</span></th>
                                <th style="width: 175px;"><span>Quantity</span></th>
                                <th><span>Delivery Date</span></th>
                                <th style="width: 114px;">Price</th>
                                <th style="width: 114px;">Raised</th>
                                <th style="width: 114px;">Select</th>
                                <th style="width: 75px;">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko template: { name: $root.templateToUseDeliverySchedule , foreach: $root.selectedOrder().deliverySchedules } -->
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script id="ediDeliverScheduleTemplate" type="text/html">
        <tr>
            <td style="width: 175px">
                <div>
                    <select class="form-control" data-bind="options: $root.selectedOrder().items , optionsText: 'productName', optionsValue: 'id' ,value:itemId,validationtooltip:itemId"></select>
                    <span class="help-block text-right"></span>
                </div>
            </td>
            <td style="width: 175px">
                <div>
                    <select class="form-control" data-bind="options: $root.companyAddresses , optionsText: 'name', optionsValue: 'id',value:addressId,validationtooltip:addressId"></select>
                    <span class="help-block text-right"></span>
                </div>
            </td>
            <td style="width: 175px;padding-top: 9px;">
                <div>
                    <input type="text" class="form-control" data-bind="value: quantity, validationTooltip: quantity" />
                </div>
            </td>
            <td style="width: 114px;padding-top: 7px;">
                <div>
                    <input type="text" class="form-control" data-bind="datepicker: deliveryDate" />
                </div>
            </td>
            <td style="width: 114px;padding-top: 7px"><span data-bind="visible:price()!==undefined,text: $root.currencySymbol"></span><span data-bind="numberInput: price"></span> </td>
            <td style="padding-top: 7px;">
                <div class="checkbox-nice">
                    <input type="checkbox" disabled data-bind="checked: deliveryNoteRaised,attr: { id: 'deliveryNoteRaised' + $index() }">
                    <label data-bind="attr: { for: 'deliveryNoteRaised' + $index() }"></label>
                </div>
            </td>
            <td style="width: 114px;padding-top: 7px;">
                <div class="checkbox-nice">
                    <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'selected' + $index() }">
                    <label data-bind="attr: { for: 'selected' + $index() }"></label>
                </div>
            </td>
            <td style="width: 75px;padding-top: 7px;">
                <a href="#" class="table-link danger" data-bind="click: $root.onDeleteDeliveryScheduleItem" title="Delete">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
    </script>
    <script id="itemDeliverScheduleTemplate" type="text/html">
        <tr data-bind="click:$root.selectDeliverySchedule">
            <td style="width: 175px;font-size: 0.875em" data-bind="text: itemName"></td>
            <td style="width: 175px" data-bind="text: addressName"></td>
            <td style="width: 175px" data-bind="text: quantity"></td>
            <td data-bind="dateString: deliveryDate"></td>
            <td style="width: 114px"><span data-bind="visible:price()!==undefined,text: $root.currencySymbol"></span><span data-bind="text: price"></span> </td>
            <td>
                <div class="checkbox-nice">
                    <input type="checkbox" disabled data-bind="checked: deliveryNoteRaised,attr: { id: 'deliveryNoteRaised1' + $index() }">
                    <label data-bind="attr: { for: 'deliveryNoteRaised1' + $index() }"></label>
                </div>
            </td>
            <td>
                <div class="checkbox-nice">
                    <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'selected1' + $index() }">
                    <label data-bind="attr: { for: 'selected1' + $index() }"></label>
                </div>
            </td>
            <td style="width: 75px">
                <a href="#" class="table-link danger" data-bind="click: $root.onDeleteDeliveryScheduleItem" title="Delete">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>

        </tr>
    </script>

</div>



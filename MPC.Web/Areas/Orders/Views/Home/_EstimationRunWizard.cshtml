@{
    ViewBag.Title = "Estimation Wizard";
}
<div class="modal fade" id="estimateRunWizard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Estimation Wizard</h4>
            </div>
            <div class="row" id="user-profile" style="margin-left: 0px;margin-right: 2px;">

                <div class="col-lg-12 col-md-8 col-sm-8">
                    <div class="main-box clearfix">
                        <div class="tabs-wrapper profile-tabs">
                            <ul class="nav nav-tabs" id="myTab">
                                <li class="active"><a href="#tab-recomendation" data-toggle="tab">Best Press Recomendation</a></li>
                                <li><a href="#tab-Sections" data-toggle="tab">Section Cost Centers</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab-recomendation">
                                    <div class="col-lg-12 form-horizontal">
                                        <div class="form-group">
                                            <div class="col-lg-4 text-right">
                                                <label class="control-label tooltip-float" style="font-weight:bold;">Please select the press you want to use</label>
                                            </div>
                                            <div class="col-lg-6">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                               
                                                <label class="control-label tooltip-float">Quantities</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <!-- ko if: $root.selectedSection()!==undefined  -->   @*&& selectedSection()!==undefined*@
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty1" id="qty1" />
                                                </div>
                                                <!--ko if: $root.isEstimateScreen-->
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty2" id="qty2" />
                                                </div>
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty3" id="qty3" />
                                                </div>
                                                <!--/ko-->
                                                <!-- /ko -->
                                            </div>
                                        </div>
                                        @*  <div class="form-group">
                                            <div class="col-lg-3 text-right">

                                            </div>*@
                                        @*<div class="col-lg-9">*@
                                        <div class="clearfix">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizard table-hover table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th class="col-lg-3 "><span>Press</span></th>
                                                            <th class="col-lg-1"><span>Cost</span></th>
                                                            <th class="col-lg-2 text-right"><span style="margin-right: -5px;">Run Time </span></th>

                                                            <th class="col-lg-1"><span style=" margin-left: 4px;" data-bind="text: $root.isEstimateScreen()===true ? 'Cost':''"></span></th>
                                                            <th class="col-lg-2  text-right" style="padding-right: 0px;" data-bind="text: $root.isEstimateScreen()===true ? 'Run Time':''"><span> </span></th>
                                                            <th class="col-lg-1"><span style=" margin-left: 9px;" data-bind="text: $root.isEstimateScreen()===true ? 'Cost':''"></span></th>
                                                            <th class="col-lg-2  text-right" style="padding-right: 0px;" data-bind="text: $root.isEstimateScreen()===true ? 'Run Time':''"><span>Run Time </span></th>
                                                            <th style="width:55px;">&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!--ko if:$root.bestPressList().length==0-->
                                                        <tr>
                                                            <td class="col-lg-2">
                                                                <span>No Item found!</span>
                                                            </td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                        <!-- /ko -->
                                                        <!-- ko template: { name: 'bestPressItemtemplate' , foreach: $root.bestPressList } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        @*</div>*@
                                        @*</div>*@
                                        <!-- ko if: $root.selectedSection()!==undefined  -->
                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                                <label class="control-label">Pre Trim</label>                                               
                                                <input type="checkbox" data-bind="checked: $root.selectedSection().isFirstTrim" />                                                
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                                <label class="control-label">Trim</label>                                                
                                                <input type="checkbox" data-bind="checked: $root.selectedSection().isSecondTrim" />                                               
                                            </div>
                                        </div>
                                        <!-- /ko -->
                                    </div>
                                </div>
                                <div class="tab-pane fade " id="tab-Sections">
                                    <div class="col-lg-12 form-horizontal">
                                        <div class="col-xs-4 filter-block">
                                            <div class="col-xs-5">
                                                <label style="margin-top: 2px;"class="control-label">User Defined</label>
                                            </div>

                                            <div class="col-xs-7 form-group pull-left from-group-filterText" style="width: 149px">
                                                <form>
                                                    <input data-bind="value:$root.searchString" style="margin-bottom: 4px" type="text" class="form-control" placeholder="Search...">
                                                    <i style="margin-right: 8px" class="fa fa-search search-icon"></i>
                                                </form>
                                            </div>
                                        </div>
                                         
                                        <div class="col-xs-4">
                                            <label style="margin-top: 9px;"class="control-label ">Applied in this section</label>
                                        </div>
                                        
                                    </div>
                                    @*<div class="col-lg-12 form-horizontal">
                                            <div class="col-xs-4">
                                            </div>
                                            <div class="col-xs-4">

                                                <div class="form-group pull-left" style="margin-left: 0px;width: 100%;">
                                                    <input type="text" class="form-control" style="width: 70%;float: left;" placeholder="Search...">
                                                    <i class="fa fa-search search-icon" style="padding: 9px;"></i>
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                            </div>
                                        </div>*@
                                    <div class="col-lg-12 form-horizontal">

                                        <div class="col-xs-4" style="max-height: 223px;min-height: 20px;overflow-y: auto">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizards table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:58%">&nbsp;</th>
                                                            <th style="width:55px;">&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!--ko if:$root.userCostCentersCopy().length==0-->
                                                        <tr>
                                                            <td class="col-lg-2">
                                                                <span>No Item found!</span>
                                                            </td>
                                                            <td></td>
                                                        </tr>
                                                        <!-- /ko -->
                                                        <!-- ko template: { name: 'userCostCenterItemtemplate' , foreach: $root.userCostCentersCopy } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>

                                        <div class="col-xs-4" style="max-height: 223px;min-height: 20px;overflow-y: auto">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizard table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:100%"><span>&nbsp;</span></th>
                                                            @*<th style="width:55px;">&nbsp;</th>*@
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                       
                                                        <!-- ko template: { name: 'selectedUserCostCenterItemtemplate' , foreach: $root.userCostCenters } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bind="click:$root.clickOnWizardOk">OK</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script id="bestPressItemtemplate" type="text/html">
    <tr data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        @*<div style="width:87px;">*@
        <div style="width: 66%; margin-left: 8px;">
            <label class="control-label text-left" style="text-align: left" data-bind="text:machineName"></label>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div style="margin-left: 6px">
            <span data-bind="text:$root.currencySymbol"></span><span data-bind="numberInput:qty1Cost"></span>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div class=" pull-right" style=" ">
            <span data-bind="text:qty1RunTime"></span>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div class="col-xs-3" style="margin-left: 5px;">
            <span data-bind="text:$root.isEstimateScreen()===true ? $root.currencySymbol:''"> </span><span data-bind="numberInput:qty2Cost, style:{visibility:$root.isEstimateScreen()!==true ?'hidden' : 'visible'}"></span>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div class="pull-right" style=" ">
            <span data-bind="text:$root.isEstimateScreen()===true ? qty2RunTime:''"></span>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div class="" style="margin-left: 18px;">
            <span data-bind="text:$root.isEstimateScreen()===true ? $root.currencySymbol:''"></span><span data-bind="numberInput: qty3Cost, style:{visibility:$root.isEstimateScreen()!==true ?'hidden' : 'visible'}"></span>
        </div>
    </td>
    <td data-bind="click:$root.selectBestPressFromWizard, css: { selectedRow: $root.selectedBestPressFromWizard() === $data }">
        <div class="pull-right" style=" margin-right: 7px;">
            <span style="margin-right: -9px;" data-bind="text:$root.isEstimateScreen()===true ? qty3RunTime:''"></span>
        </div>
    </td>
    <td class="text-right"></td>
</script>

<script id="userCostCenterItemtemplate" type="text/html">
    <tr>
        <td style="width:100%">
            @*<div style="width:87px;">*@
            <label style=" margin-left: 10px; padding-top: 0px" class="control-label font-size-grid-label" data-bind="text:name"></label>
        </td>
        <td>
            <div class="checkbox-nice" style="margin-top: 10px;">
                <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'userCost' + $index() }">
                <label data-bind="attr: { for: 'userCost' + $index() }"></label>
            </div>
        </td>
    </tr>
</script>
<script id="selectedUserCostCenterItemtemplate" type="text/html">
    <tr>
        <!-- ko if:isSelected() -->
        <td style="width:100%">
            <label style=" margin-left: 10px;" class="control-label font-size-grid-label" data-bind="text:name"></label>
        </td>
        <td></td>
        <!-- /ko -->

    </tr>
</script>


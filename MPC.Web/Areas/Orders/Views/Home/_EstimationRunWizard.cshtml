@{
    ViewBag.Title = "Estimation Wizard";
}
<div class="modal fade" id="estimateRunWizard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Estimation Wizard</h4>
            </div>
            <div class="row" id="user-profile" style="margin-left: 0px;margin-right: 2px;">

                <div class="col-lg-12 col-md-8 col-sm-8">
                    <div class="main-box clearfix">
                        <div class="tabs-wrapper profile-tabs">
                            <ul class="nav nav-tabs" id="myTab">
                                <li class="active"><a href="#tab-recomendation" data-toggle="tab">Best Press Recomendation</a></li>
                                <li><a href="#tab-Sections" data-toggle="tab">Section Cost Centers</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab-recomendation">
                                    <div class="col-lg-12 form-horizontal">
                                        <div class="form-group">
                                            <div class="col-lg-4 text-right">
                                                <label class="control-label tooltip-float" style="font-weight:bold;">Please select the press you want to use</label>
                                            </div>
                                            <div class="col-lg-6">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                                <div class="bs-example-tooltips tooltip-float-width">
                                                    <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Quantities" data-original-title="" title="">
                                                        <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                                                    </a>
                                                </div>
                                                <label class="control-label tooltip-float">Quantities</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <!-- ko if: $root.selectedSection()!==undefined  -->   @*&& selectedSection()!==undefined*@
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty1" id="qty1" />
                                                </div>
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty2" id="qty2" />
                                                </div>
                                                <div class="col-xs-4">
                                                    <input type="text" disabled="disabled" class="form-control" data-bind="value:$root.selectedSection().qty3" id="qty3" />
                                                </div>
                                                <!-- /ko -->
                                            </div>
                                        </div>
                                        @*  <div class="form-group">
                                            <div class="col-lg-3 text-right">

                                            </div>*@
                                        @*<div class="col-lg-9">*@
                                        <div class="clearfix">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizard table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th class="col-lg-3 "><span>Machine Name</span></th>
                                                            <th class="col-lg-1"><span>Cost</span></th>
                                                            <th class="col-lg-2"><span>Run Time </span></th>
                                                            <th class="col-lg-1"><span>Cost</span></th>
                                                            <th class="col-lg-2"><span>Run Time </span></th>
                                                            <th class="col-lg-1"><span>Cost</span></th>
                                                            <th class="col-lg-2"><span>Run Time </span></th>
                                                            <th style="width:55px;">&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- ko template: { name: 'bestPressItemtemplate' , foreach: $root.bestPressList } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        @*</div>*@
                                        @*</div>*@
                                        <!-- ko if: $root.selectedSection()!==undefined  -->
                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                                <label class="control-label">Pre Trim</label>                                               
                                                <input type="checkbox" data-bind="checked: $root.selectedSection().isFirstTrim" />                                                
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-3 text-right">
                                                <label class="control-label">Trim</label>                                                
                                                <input type="checkbox" data-bind="checked: $root.selectedSection().isSecondTrim" />                                               
                                            </div>
                                        </div>
                                        <!-- /ko -->
                                    </div>
                                </div>
                                <div class="tab-pane fade " id="tab-Sections">
                                    <div class="col-lg-12 form-horizontal">
                                        <div class="col-xs-4">
                                            <label class="control-label">All User Defined Cost Centers</label>
                                        </div>
                                        <div class="col-xs-4">
                                            <label class="control-label ">Applied Cost Center for this Product</label>
                                        </div>
                                        <div class="col-xs-4">
                                            <div class="form-group pull-left" style="margin-left: 0px;width: 100%;">
                                                <input type="text" class="form-control" style="width: 70%;float: left;" placeholder="Search...">
                                                <i class="fa fa-search search-icon" style="padding: 9px;"></i>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-lg-12 form-horizontal">
                                            <div class="col-xs-4">
                                            </div>
                                            <div class="col-xs-4">

                                                <div class="form-group pull-left" style="margin-left: 0px;width: 100%;">
                                                    <input type="text" class="form-control" style="width: 70%;float: left;" placeholder="Search...">
                                                    <i class="fa fa-search search-icon" style="padding: 9px;"></i>
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                            </div>
                                        </div>*@
                                    <div class="col-lg-12 form-horizontal">

                                        <div class="col-xs-4" style="max-height: 223px;min-height: 20px;overflow-y: auto">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizards table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:58%"><span>Cost Center Name</span></th>
                                                            <th style="width:55px;">&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- ko template: { name: 'userCostCenterItemtemplate' , foreach: $root.userCostCenters } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>

                                        <div class="col-xs-4" style="max-height: 223px;min-height: 20px;overflow-y: auto">
                                            <div class="table-responsive" style="border:groove;border-width:1px;">
                                                <table class="table-run-wizard table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:100%"><span>Cost Center Name</span></th>
                                                            @*<th style="width:55px;">&nbsp;</th>*@
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- ko template: { name: 'selectedUserCostCenterItemtemplate' , foreach: $root.userCostCenters } -->
                                                        <!-- /ko -->
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bind="click:$root.clickOnWizardOk">OK</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script id="bestPressItemtemplate" type="text/html">
    <tr data-bind="click:$root.selectBestPressFromWizard, css: { selectedBestPressFromWizard: $root.selectedBestPressFromWizard() === $data }">
        <td>
            @*<div style="width:87px;">*@
            <div class="col-xs-4" style="width: 66%;">
                <label class="control-label text-left" data-bind="text:machineName"></label>
            </div>
        </td>
        <td>
            <div class="col-xs-3 ">
                <span data-bind="text:$root.currencySymbol"></span><span data-bind="text:qty1Cost"></span>
            </div>
        </td>
        <td>
            <div class="col-xs-3">
                <span data-bind="text:qty1RunTime"></span>
            </div>
        </td>
        <td>
            <div class="col-xs-3">
                <span data-bind="text:$root.currencySymbol"> </span><span data-bind="text:qty2Cost"></span>
            </div>
        </td>
        <td>
            <div class="col-xs-3">
                <span data-bind="text:qty2RunTime"></span>
            </div>
        </td>
        <td>
            <div class="col-xs-3">
                <span data-bind="text:$root.currencySymbol"></span><span data-bind="text:qty3Cost"></span>
            </div>
        </td>
        <td>
            <div class="col-xs-3">
                <span data-bind="text:qty3RunTime"></span>
            </div>
        </td>
        <td class="text-right"></td>
    </tr>
</script>

<script id="userCostCenterItemtemplate" type="text/html">
    <tr>
        <td style="width:100%">
            @*<div style="width:87px;">*@
            <label class="control-label font-size-grid-label" data-bind="text:name"></label>
        </td>
        <td>
            <div class="checkbox-nice" style="float:right;">
                <input type="checkbox" data-bind="checked: isSelected,attr: { id: 'userCost' + $index() }">
                <label data-bind="attr: { for: 'userCost' + $index() }"></label>
            </div>
        </td>
    </tr>
</script>
<script id="selectedUserCostCenterItemtemplate" type="text/html">
    <tr>
        <!-- ko if:isSelected() -->
        <td style="width:100%">
            <label class="control-label font-size-grid-label" data-bind="text:name"></label>
        </td>
        <td></td>
        <!-- /ko -->

    </tr>
</script>


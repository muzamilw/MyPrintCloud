<div class="modal fade" id="inkDialogModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" id="dialgHeaderPadding">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" data-bind="text: $root.isSide1InkButtonClicked() ? 'Side 1 Colors' : 'Side 2 Colors'">
                    Section Colors
                </h4>
            </div>
            <div class="col-lg-12">
            </div>
            <div class="col-lg-12 form-horizontal" data-bind="with: $root.selectedSection()">
                <div class="col-lg-12" id="OrderDialogSection1" style="margin-top: 2%; width: 98%; margin-left: 1%">
                    <div class="col-lg-12 table" style="margin-top: 2%">
                        <div class="col-lg-12">
                            <div class="col-lg-6">Ink Order</div>
                            <div class="col-lg-6">Coverage Rate</div>
                        </div>
                        <div>
                            <!-- ko template: { if: $root.isSide1InkButtonClicked, name: 'inkDialogSectionInkCoverageTemplate' , foreach: sectionInkCoveragesSide1  } -->
                            <!-- /ko -->
                            <!-- ko template: { if: !$root.isSide1InkButtonClicked(), name: 'inkDialogSectionInkCoverageTemplate' , foreach: sectionInkCoveragesSide2  } -->
                            <!-- /ko -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix">
                &nbsp;
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: $root.onSectionInkCoverageSave" style="margin-left: 0; margin-top: 10px;">OK</button>
            </div>
        </div>
    </div>
</div>
<script id="inkDialogSectionInkCoverageTemplate" type="text/html">
    <div class="col-lg-6" style="margin-top: 2%">
        <select class="form-control" data-bind="options: $root.inks, optionsText: 'ItemName', optionsValue: 'StockItemId', value: inkId"></select>
    </div>
    <div class="col-lg-6" style="margin-top: 2%">
        <div class="input-group col-lg-6">
            <span data-bind="text:'%'" class="input-group-addon"></span>
            <div>
                <input type="text" class="form-control text-right" data-bind="autoNumeric:coverageRate, settings:{mDec:0,vMin:0,vMax:100}, validationOnElement: coverageRate" min="0" max="100">
            </div>
        </div>
    </div>
</script>
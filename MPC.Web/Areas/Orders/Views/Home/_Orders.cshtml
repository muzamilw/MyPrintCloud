<div class="row" data-bind="visible: !isOrderDetailsVisible()">
    <div class="col-sm-12">
        <div class="pull-left">
            <span style="padding-left: 7px; color: #696969">Manage and Progress all your online and offline Orders in one place.</span>
        </div>
        <div class="pull-right" style="padding-right: 9px;">
            <button id="open-wizard" data-bind="click: createOrder" class="btn btn-primary pull-right">
                Add New Order
            </button>
            <button style="margin-right:5px;" data-bind="click: openReportsOrder" class="btn btn-primary pull-right">
                Reports
            </button>
        </div>
    </div>
    <div style="clear: both">
        &nbsp;
    </div>
    <div>
        <div class="col-sm-12" style="padding-right: 6px; padding-left: 6px;">
            <!-- ko template: { name: 'orderFilterTemplate' } -->
            <!-- /ko -->
            <div class="clearfix">
            </div>
            <div class="main-box-body clearfix">
                <div class="tabs-wrapper profile-tabs">
                    <ul id="orderTabs" class="nav nav-tabs" style="margin-left: 10px;margin-right: 9px;">
                        <li id="pending-orders" class="active"><a href="#tab-PendingOrders" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(4);}">Pending Orders</a></li>
                        <li id="confirmed-starts"><a href="#tab-ConfirmedStarts" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(5);}">Confirmed Starts</a></li>
                        <li id="in-production"><a href="#tab-InProduction" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(6);}">In Production</a></li>
                        <li id="ready-shipping"><a href="#tab-ReadyForShipping" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(7);}">Ready For Shipping</a></li>
                        <li id="invoiced"><a href="#tab-Invoiced" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(10);}">Invoiced</a></li>
                        <li id="cancelled-orders"><a href="#tab-CancelledOrders" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(9);}">Cancelled Orders</a></li>
                        <li id="all-orders"><a href="#tab-All" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(0);}">All Orders</a></li>
                    </ul>
                    <div class="tab-content" style="  margin-top: -15px;">
                        <div class="tab-pane fade in active" id="tab-PendingOrders" style="background-color:white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">Pending orders are orders manually progressed or from a web store and waiting for confirmation by the production manager before progressing into production</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-ConfirmedStarts" style="background-color: white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">Confirmed starts are jobs that have been approved and are queued for actual physical production.</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-InProduction" style="background-color: white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">The status in production is when the physical job is being produced and is assigned to a person and/or equipment.</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-ReadyForShipping" style="background-color: white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">Once the job is complete and awaiting dispatch to a customer the order can be set to ready for shipping.</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-Invoiced" style="background-color: white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">Once dispatched mark the job as invoiced, and the information can be automatically passed to popular accounting packages like Xero, MYOB, Sage and QuickBooks.</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-CancelledOrders" style="background-color: white;">
                            <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                <span style="color: #696969">If a job is cancelled by a customer move the job to cancelled to stop the order from progressing further.</span>
                                <div style="height:20px;">
                                    &nbsp;
                                </div>
                            </div>
                            <!-- ko template: { name: 'tabItemsList' } -->
                            <!-- /ko -->
                        </div>
                        <div class="tab-pane fade in" id="tab-All">
                            <div class="main-box-body main-box clearfix">

                                <div style="margin-bottom:15px;padding-top:25px;padding-left:20px;">
                                    <span style="color: #696969">Process orders through to completion, orders that are progressed from pending to in progress will appear on the production board.</span>
                                    <div style="height:20px;">
                                        &nbsp;
                                    </div>
                                </div>

                                <div class="table-responsive" style="padding-left: 22px; padding-right: 22px;">
                                    <table id="OrderListtbl" class="table user-list table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th class="col-sm-1"><span>&nbsp;</span></th>
                                                <th class="col-sm-4"><span>Customer</span></th>
                                                <th class="col-sm-2"><span>Order Code</span></th>
                                                <th class="col-sm-2"><span>Order Date</span></th>
                                                <th class="col-sm-1"><span>Flag</span></th>
                                                <th class="col-sm-1"><span>Status</span></th>
                                                <th class="col-sm-2" style="text-align: right"><span>Order Total</span></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- ko if: orders().length === 0 -->
                                            <tr>
                                                <td colspan="7">
                                                    <span style="font-size: 14px;">No Items found!</span>
                                                </td>
                                            </tr>
                                            <!-- /ko -->
                                            <!-- ko template: { name: 'allOrderListViewTemplate', foreach: orders } -->
                                            <!-- /ko -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div id="pagerDiv" class="pull-right">
                                <!-- ko with: pager -->
                                @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                <!-- /ko -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                </div>
            </div>
        </div>
    </div>
    @* Filter Template *@
    <script id="orderFilterTemplate" type="text/html">
        <div class="filter-body" style="margin-left: 10px; margin-right: 10px;">
            <form data-bind="submit: $root.getOrdersOfCurrentScreen">
                <div class="filter-block pull-right" style="padding-right: 13px; padding-bottom: 5px; margin-top: 4px;">

                    <div class="form-group pull-left">
                        <select class="form-control col-sm-4" data-bind="options:$root.orderType,optionsText:'name',optionsValue:'value', value: $root.orderTypeFilter"></select>
                    </div>
                    <div class="form-group pull-left">
                        @*<select style="width: 258px !important;" id="flag" data-bind="select2: { formatResult: $root.formatResult,formatSelection: $root.formatSelection }, value: selectedFilterFlag, foreach: $root.sectionFlags">
                            <option style="width: 258px !important;" data-bind="text: name, attr: { 'data-color': color, value: id }"></option>
                        </select>*@

                        <select class="form-control" data-bind="options: $root.sectionFlags, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Select Flag...', value: $root.selectedFilterFlag"></select>
                    </div>
                    <div class="form-group pull-left from-group-filterText">
                        <input type="text" class="form-control" placeholder="Search..." data-bind="value: filterText">
                        <i class="fa fa-search search-icon" data-bind="click: $root.getOrdersOfCurrentScreen"></i>
                    </div>
                </div>
            </form>
            <div class="clearfix">
            </div>
        </div>
    </script>
    @* List View Template *@
    <script id="orderListViewTemplate" type="text/html">
        <tr data-bind=" click: $root.editOrder" style="cursor: pointer">
            <td>
                <!-- ko if: isDirectSale()==true -->
                <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/forwardicon.png")" alt="" />
                <!-- /ko -->
                <!-- ko if: isDirectSale()==false -->
                <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/arrow_down.png")" alt="" />
                <!-- /ko -->
            </td>
            <td>
                <a href="#" data-bind="text: companyName, click: undefined" style="cursor:pointer;" class="user-link"></a>
                <span class="user-subhead">
                    <span data-bind="text: name"></span>
                    <span data-bind="text: ' '"></span>
                    <span data-bind="text: noOfItemsUi"></span>
                </span>
            </td>
            <td>
                <span data-bind="text: orderCode"></span>
            </td>
            <td>
                <span data-bind="dateString: orderDate, datePattern: 'DD/MM/YYYY'"></span>
            </td>
            <td>
                <span class="label label-success" data-bind="style: { background: flagColor }"><i class="fa fa-flag"></i></span>
            </td>

            <td style="text-align: right">
                <span data-bind="text:estimateTotal()!==undefined ? $root.currencySymbol() :''"></span>
                <span data-bind="numberInput:estimateTotal()!==undefined ? estimateTotal():''"></span>
            </td>

        </tr>
    </script>

    <script id="allOrderListViewTemplate" type="text/html">
        <tr data-bind=" click: $root.editOrder" style="cursor: pointer">
            <td>
                <!-- ko if: isDirectSale()==true -->
                <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/forwardicon.png")" alt="" />
                <!-- /ko -->
                <!-- ko if: isDirectSale()==false -->
                <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/arrow_down.png")" alt="" />
                <!-- /ko -->
            </td>
            <td>
                <a href="#" data-bind="text: companyName, click: undefined" style="cursor:pointer;" class="user-link"></a>
                <span class="user-subhead">
                    <span data-bind="text: name"></span>
                    <span data-bind="text: ' '"></span>
                    <span data-bind="text: noOfItemsUi"></span>
                </span>
            </td>
            <td>
                <span data-bind="text: orderCode"></span>
            </td>
            <td>
                <span data-bind="dateString: orderDate, datePattern: 'DD/MM/YYYY'"></span>
            </td>
            <td>
                <span class="label label-success" data-bind="style: { background: flagColor }"><i class="fa fa-flag"></i></span>
            </td>
            <td>
                <span data-bind="text: status"></span>
            </td>
            <td style="text-align: right">
                <span data-bind="text:estimateTotal()!==undefined ? $root.currencySymbol() :''"></span>
                <span data-bind="numberInput:estimateTotal()!==undefined ? estimateTotal():''"></span>
            </td>

        </tr>
    </script>


    @* Tab Items Lists*@
    <script id="tabItemsList" type="text/html">
        <div class="main-box-body main-box clearfix" style="padding-top: 17px;">
            <div class="table-responsive" style="padding-left: 22px; padding-right: 22px;">
                <table id="OrderListtbl" class="table user-list table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="col-sm-1"><span>&nbsp;</span></th>
                            <th class="col-sm-4"><span>Customer</span></th>
                            <th class="col-sm-2"><span>Order Code</span></th>
                            <th class="col-sm-2"><span>Order Date</span></th>
                            <th class="col-sm-1"><span>Flag</span></th>
                            <th class="col-sm-2" style="text-align: right"><span>Order Total</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ko if: orders().length === 0 -->
                        <tr>
                            <td colspan="6">
                                <span style="font-size: 14px;">No Items found!</span>
                            </td>
                        </tr>
                        <!-- /ko -->
                        <!-- ko template: { name: 'orderListViewTemplate', foreach: orders } -->
                        <!-- /ko -->
                    </tbody>
                </table>
            </div>
        </div>
        <div id="pagerDiv" class="pull-right">
            <!-- ko with: pager -->
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
            <!-- /ko -->
        </div>
    </script>


</div>



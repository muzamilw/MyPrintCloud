<div>
    <div class="col-sm-12 form-horizontal">
        <div style="margin-bottom:15px;">
            <div class="tabsdescriptions" style="margin-left:-1px;">
                <span class="group-header-description">Add payments that have been received from clients, also find payments that have been made online through a stores payment gateway</span>
            </div>
        </div>
  
        <div class="col-sm-12" style="padding-left:0px;padding-right:0px;">
            <div class="col-sm-12" style="padding-left:0px;padding-right:2px;">
                <header class="clearfix">
                <div class="filter-block pull-right" style="margin-bottom:20px;">
                    <a href="#" class="btn btn-primary pull-right" data-bind="click:$root.onCreateOrderPrePayment">
                        Add Payment
                    </a>
                </div>
                </header>
                <div class="clearfix" style="padding-left:2px;padding-right:2px;">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1"><span>Ref #</span></th>
                                    <th class="col-lg-3"><span>Description</span></th>
                                    <th class="col-lg-2"><a href="#"><span>Date</span></a></th>
                                    <th class="col-lg-2"><span>Paid By </span></th>
                                    <th class="col-lg-2"><span>Gross Total</span></th>
                                    <th class="col-lg-2">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--ko if:prePayments().length===0-->
                                <tr>
                                    <td colspan="6">
                                        <span>No Items found!</span>
                                    </td>
                                </tr>
                                <!-- /ko -->
                                <!-- ko template: { name: 'prePaymentItemTemplate' , foreach: prePayments } -->
                                <!-- /ko -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="prePaymentItemTemplate" type="text/html">
        <tr data-bind="click:$root.onEditPrePayment" style="cursor: pointer">
            <td ><a href="#"><span data-bind="text:referenceCode"></span></a></td>
            <td data-bind="text:paymentDescription"></td>
            <td><span data-bind="visible:formattedPaymentDate()!==undefined">Paid on </span><span data-bind="dateString:paymentDate,datePattern: 'DD/MM/YYYY'"></span></td>
            <td data-bind="text:paymentMethodName"></td>
            <td style="text-align: right;padding-right:84px;"><span data-bind="visible:amount()!==undefined,text:$root.currencySymbol,"></span><span data-bind="numberInput:amount"></span></td>
            <td><span> </span></td>
        </tr>
    </script>
</div>


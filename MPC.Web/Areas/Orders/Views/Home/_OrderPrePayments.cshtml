<div>
    <div class="col-md-12 form-horizontal">
        @*<h3 class="group-header">Pre-Payments</h3>*@
        <div class="col-lg-12">
            <div class="col-lg-12 clearfix">
                <header class="main-box-header clearfix">
                    <div class="filter-block pull-right">

                        <a href="#" class="btn btn-primary pull-right" data-bind="click:$root.onCreateOrderPrePayment">
                            Add Payment
                        </a>

                    </div>
                </header>
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th><span>Ref #</span></th>
                                    <th><span>Description</span></th>
                                    <th><a href="#"><span>Date</span></a></th>
                                    <th><span>Paid By </span></th>
                                    <th><span>Gross Total</span></th>
                                    @*<th style="width:83px;">&nbsp;</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                <!-- ko template: { name: 'prePaymentItemTemplate' , foreach: prePayments } -->
                                <!-- /ko -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script id="prePaymentItemTemplate" type="text/html">
        <tr data-bind="click:$root.onEditPrePayment" style="cursor: pointer">
            <td ><a href="#"><span data-bind="text:referenceCode"></span></a></td>
            <td data-bind="text:paymentDescription"></td>
            <td><span data-bind="visible:formattedPaymentDate()!==undefined">Paid on </span><span data-bind="dateString:paymentDate,datePattern: 'DD/MM/YYYY'"></span></td>
            <td data-bind="text:paymentMethodName"></td>
            <td><span data-bind="visible:amount()!==undefined,text:$root.currencySymbol,"></span><span data-bind="numberInput:amount"></span></td>
            @*<td class="text-right">
                <a href="" class="table-link" data-bind="">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>*@
        </tr>
    </script>
</div>


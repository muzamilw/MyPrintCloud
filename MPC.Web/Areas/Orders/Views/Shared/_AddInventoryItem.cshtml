<div class="modal fade my-modal" id="inventoryItem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Stock</h4>
            </div>
            <div class="modal-body">
                <div>
                    <div class="filter-body" id="filter">
                        <div class="filter-block">
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <label for="category" class="control-label">Stock Category</label>
                                </div>
                                <div class="col-lg-3">
                                    <select id="category" class="form-control" data-bind="chnage:$root.getInventoriesListItems,options: $root.categories, optionsText: 'Name', optionsValue: 'CategoryId',value:$root.selectedCategoryId"></select>
                                </div>
                            </div>
                            <div class="form-group pull-right">
                                <form data-bind="submit:$root.getInventoriesListItems">
                                    <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.inventorySearchFilter">
                                    <i class="fa fa-search search-icon"></i>
                                </form>
                          </div>
                         </div>
                            <div class="clearfix">
                            </div>
                    </div>
                    <div class="row clear-fix">
                        <div class="col-lg-12">
                            <div class="main-box no-header clearfix">
                                <div class="main-box-body clearfix">
                                    <div class="table-responsive">
                                        <table id="supplierTablle" class="table table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <th>&nbsp;</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <!-- ko template: { name: 'inventoryDialogItemTemplate', foreach: $root.inventoryItems } -->
                                            <!-- /ko -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div id="pagerDiv" class="pull-right">
                                <!-- ko with: $root.categoryPager -->
                                @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                <!-- /ko -->
                            </div>
                        </div>
                        @*<div class="pull-right" style="margin-right: 20px">
                            <button type="reset" class="btn btn-primary" data-bind="click:$root.hideCostCentreDialog">Save</button>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<script id="inventoryDialogItemTemplate" type="text/html">
    <tr>
        <td>
            <span style="font-size: 1.105em; color: black;" data-bind="text: itemName"></span>
        </td>
        <td>
            <span style="font-size: 0.875em; color: lightgray;" data-bind="text:'Pack Qty '+ packageQty()"></span>
            <br/>
            <span style="font-size: 0.875em; color: lightgray;" data-bind="text:'Weight '+ itemWeight()"></span>
            <span style="font-size: 0.875em; color: lightgray;" data-bind="text:'$'+ price() + '/' + perQtyQty()"></span>
        </td>
    </tr>
</script>

                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    <script id="itemStockSubCategoryTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionStockSubCategoryTemplate' } -->

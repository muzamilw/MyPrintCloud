
<div class="modal fade my-modal" id="customShippingDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 700px;" class="modal-dialog">
        <div class="modal-content" data-bind="with:$root.selectedShippingItem">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Shipping Detail</h4>

            </div>
            <div class="row">
                <div class="col-lg-12 form-horizontal outerDiv-Padding">
                    <div class="form-group">
                        <div class="col-lg-4 text-right">
                            <label for="txtTitle" class="control-label text-right tooltip-float">Title</label>
                        </div>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" id="txtTitle" data-bind="value:productName,validationTooltip:productName">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 text-right">
                            <label for="txtTitle" class="control-label text-right tooltip-float">Notes</label>
                        </div>
                        <div class="col-lg-5">
                            <textarea class="form-control" rows="3" data-bind="value: itemNotes" id="txtNotes" placeholder="Enter Notes" style="background-color: #FCFBB6;"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-4 text-right">

                            <label for="txtNetTotal" class="control-label text-right tooltip-float">Price</label>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon" data-bind="text:$root.currencySymbol"></span>
                                <input type="text" class="form-control  text-right" id="txtNetTotal" data-bind="numberValue:$root.calculateGrossTotalForShipping">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 text-right">
                            <label for="txtTaxAmount" class="control-label text-right tooltip-float">Tax</label>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">%</span>
                                <input type="text" class="form-control  text-right" id="txtTaxAmount" data-bind="autoNumeric:$root.calculateShippingTaxValue,settings:{mDec:2},validationTooltip:tax1">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-4 text-right">
                            <label for="amount" class="control-label text-right tooltip-float">Gross Total</label>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon" data-bind="text:$root.currencySymbol"></span>
                                <input type="text" class="form-control  text-right" id="amount" disabled data-bind="numberValue:qty1GrossTotal" />
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            
            <div class="modal-footer" style="padding-right:0;padding-left:0;">
                <div style="padding-right:10px;">
                    <button type="button" class="btn btn-primary" data-bind="click:$root.onSaveShippingDetail, enable: hasChanges, css: { 'btn-warning': hasChanges }">Save</button>
                    <button type="button" class="btn btn-default" style="margin-left: 0;" data-bind="click:$root.onCloseShippingDetail">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row" data-bind="visible: isDetailsVisible() && !isItemDetailVisible()" style="display: none">
    <div class="row">
        <div class="col-lg-12 PaddingZero">
            <div class="col-lg-12 PaddingZero">
                <div class="col-lg-3">
                    <div class="btn-group" style="float:left;margin-bottom: 3px; margin-left:14px">
                        <button type="button" class="btn btn-primary">Actions</button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Print</a></li>
                            <li><a href="#">Cancel</a></li>
                            <li><a href="#">Archive</a></li>
                           
                        </ul>
                    </div>
                </div>
                <div data-bind="with: selectedInvoice" style="text-align: right; padding-right: 16px">                    
                    <button class="btn btn-primary" id="saveBtn" data-bind="click: $root.onSaveInvoice, css: { 'btn-warning': hasChanges }, enable: hasChanges">Save</button>
                    <button class="btn btn-default" id="cancelBtn" data-bind="click: $root.onCloseInvoiceEditor">Cancel</button>
                </div>
            </div>


            <div class="col-lg-12 PaddingZero PaddingStatuses">
                <div class="col-xs-7">

                    <!-- here -->

                </div>
                <div class="col-xs-3">


                </div>
                <div class="col-xs-2">



                </div>

            </div>
        </div>
        <div class="col-lg-12">
            <div class="row" data-bind="with: selectedInvoice">
                <div class="col-lg-12">
                    <div class="clearfix">
                        <div class="pull-left validationSummaryContainer">
                            <a class="validationSummaryLink" data-bind="visible: $root.errorList().length > 0, bootstrapPopover: { html: true, title: 'Please fix following errors', elementNode: 'validationSummaryPopup', popoverId: 'validationSummaryPopoverBody' }" style="display: none">Invalid data: Click here to see details.</a>
                            @* ReSharper disable UnknownCssClass *@
                            <div class="well well-small validationSummaryModal" id="validationSummaryPopup" style="display: none">
                                @* ReSharper restore UnknownCssClass *@
                                <div id="validationSummaryPopoverBody">
                                    <ul data-bind="foreach: $root.errorList">
                                        <li>
                                            <a data-bind="click: $root.gotoElement.bind($data.element)"><span data-bind="text: name"></span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="user-profile">
        <div class="col-lg-12 col-md-8 col-sm-8">
            <div class="main-box clearfix my-tabsHeader">
                <div class="tabs-wrapper profile-tabs">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab-EstimateHeader" data-toggle="tab">Invoice Detail</a></li>                        
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab-EstimateHeader" data-bind="with: selectedInvoice">
                            <div>
                                <div class="col-lg-12 form-horizontal">
                                    <h3 class="group-header">Invoice Detail</h3>
                                    @*<center><div class="slider" style="margin-bottom:60px; width:600px"></div></center>*@
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="col-lg-4 text-right">                                               
                                                <label class="control-label tooltip-float">Customer</label>
                                            </div>
                                            <div class="col-lg-6">
                                                <div>
                                                    <label class="control-label" id="txtCompany" style="font-size: 18px;" data-bind="text: companyName, validationOnElement: companyId"></label>

                                                </div>
                                            </div>
                                            <div class="col-lg-1">
                                                <div>
                                                    <button data-bind="click: $root.openCompanyDialog, enable: ($root.selectedInvoice().id() <= 0) || ($root.selectedInvoice().id()===undefined) || !isPostedInvoice()" href="#" class="btn btn-primary pull-right">
                                                        <i class="fa fa-lg"></i>&nbsp;....
                                                    </button>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-4 text-right">

                                                <label class="control-label text-right tooltip-float">Attention</label>
                                            </div>

                                            <div class="col-lg-6" data-bind="if: $root.isCompanyBaseDataLoaded">
                                                <select class="form-control" data-bind="options: $root.companyContacts, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Select...', value: contactId, enable: !isPostedInvoice()"></select>
                                                <span class="help-block text-right"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-4 text-right">

                                                <label class="control-label text-right tooltip-float">Address Name</label>
                                            </div>
                                            <div class="col-lg-5" data-bind="if: $root.isCompanyBaseDataLoaded">
                                                <select class="form-control" data-bind="options: $root.companyAddresses, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Select...', value: addressId, enable: !isPostedInvoice()"></select>
                                                <span class="help-block text-right"></span>
                                            </div>
                                            <div class="col-lg-1">

                                                <a class="btn btn-primary pull-right" id="addresspull" onclick="addAddress()">
                                                    <i id="addresspullicon" class="fa fa-chevron-circle-right drop-icon"></i>
                                                </a>
                                            </div>

                                        </div>
                                        <div id="popoveraddress" style="display:none;">
                                            <div class="form-group">
                                                <div class="col-lg-4 text-right">
                                                    <label class="control-label tooltip-float">&nbsp;</label>
                                                </div>
                                                <div class="col-lg-6" data-bind="with: $root.selectedAddress">
                                                    <div>
                                                        <label id="address1" data-bind="text: address1" class="form-control" style="border:none"></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-top: -20px;">
                                                <div class="col-lg-4 text-right">
                                                    <label class="control-label tooltip-float">&nbsp;</label>
                                                </div>
                                                <div class="col-lg-6" data-bind="with: $root.selectedAddress">
                                                    <div>
                                                        <label id="telephone" data-bind="text: telephone1" class="form-control" style="border:none"></label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-top: -20px;">
                                                <div class="col-lg-4 text-right">
                                                    <label class="control-label tooltip-float">&nbsp;</label>
                                                </div>
                                                <div class="col-lg-6" data-bind="with: $root.selectedCompanyContact">

@{
    ViewBag.Title = "Invoices";
}
@section leftmenue {
}

<div class="row" id="invoiceBinding">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <input type="hidden" name="CallingMethod" id="CallingMethod" value="@ViewBag.CallingMethod" />
                    <ol class="breadcrumb">
                        <li><a href="~/Dashboard/Index" class="my-navigator">HOME</a></li>
                        <li style="cursor:pointer"><span>Invoices</span></li>
                        <li data-bind="css: $root.orderCodeHeader() != '' &&  $root.itemCodeHeader() == '' ?  'active' :   '' , click:$root.closeItemDetail, visible:$root.orderCodeHeader() !== '' " style="display: none; cursor:pointer"><span data-bind="text:$root.orderCodeHeader"></span></li>
                        <li data-bind="css: $root.itemCodeHeader() != '' ?  'active'   :   '', visible:$root.itemCodeHeader() !== ''" style="display: none; cursor:pointer"><span data-bind="text:$root.itemCodeHeader()+'  '+$root.selectedOrder().companyName() + ' '+ $root.orderCodeHeader()"></span></li>
                        @*<li data-bind="css: $root.sectionHeader() != '' ?  'active' : '' , visible:$root.sectionHeader() !== ''  " style="display: none"><span data-bind="text:$root.sectionHeader"></span></li>*@
                    </ol>
                    <div class="clearfix">
                        <h1 class="pull-left" data-bind="text: ($root.itemCodeHeader())=='' ? pageHeader : ( $root.sectionHeader()==='' ? $root.selectedProduct().productName: ($root.selectedSection()!=undefined ? $root.selectedProduct().productName : ''))">Invoices</h1>

                    </div>
                    <div class="row" data-bind="visible: !isOrderDetailsVisible()">
                        <div class="col-lg-12">
                            <div class="pull-right">
                                <button id="open-wizard" data-bind="click: createOrder" class="btn btn-primary pull-right">
                                    Add Invoice
                                </button>
                            </div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div>
                            <div class="col-lg-12">
                                <!-- ko template: { name: 'orderFilterTemplate' } -->
                                <!-- /ko -->
                                <div class="clearfix">
                                </div>
                                <div class="main-box-body main-box clearfix">
                                    <div class="tabs-wrapper profile-tabs">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab-All" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(0);}">All Invoices</a></li>
                                            <li><a href="#tab-PendingOrders" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(4);}">Awaiting</a></li>
                                            <li><a href="#tab-ConfirmedStarts" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(5);}">Posted</a></li>
                                            <li><a href="#tab-InProduction" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(6);}">Cancelled</a></li>
                                            <li><a href="#tab-ReadyForShipping" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(7);}">Archived</a></li>
                                            <li><a href="#tab-Invoiced" data-toggle="tab" data-bind="click: function(){$root.getOrdersOnTabChange(8);}">Proforma</a></li>

                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane fade in active" id="tab-All">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>
                                            <div class="tab-pane fade in" id="tab-PendingOrders">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>
                                            <div class="tab-pane fade in" id="tab-ConfirmedStarts">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>
                                            <div class="tab-pane fade in" id="tab-InProduction">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>
                                            <div class="tab-pane fade in" id="tab-ReadyForShipping">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>
                                            <div class="tab-pane fade in" id="tab-Invoiced">
                                                <!-- ko template: { name: 'tabItemsList' } -->
                                                <!-- /ko -->
                                            </div>

                                        </div>
                                    </div>
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </div>
                        </div>
                        @* Filter Template *@
                        <script id="orderFilterTemplate" type="text/html">
                            <div class="filter-body">
                                <form data-bind="submit: $root.getOrdersOfCurrentScreen">
                                    <div class="filter-block pull-right">
                                        <div class="form-group pull-left">
                                            <select class="form-control col-lg-4" data-bind="options:$root.orderType,optionsText:'name',optionsValue:'value', value: $root.orderTypeFilter"></select>
                                        </div>
                                        <div class="form-group pull-left">
                                            <select class="form-control" data-bind="options: $root.sectionFlags, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Select Flag...', value: $root.selectedFilterFlag"></select>
                                        </div>
                                        <div class="form-group pull-left">
                                            <input type="text" class="form-control" placeholder="Search..." data-bind="value: filterText">
                                            <i class="fa fa-search search-icon" data-bind="click: $root.getOrdersOfCurrentScreen"></i>
                                        </div>
                                        
                                    </div>
                                </form>
                                <div class="clearfix">
                                </div>
                            </div>
                        </script>
                        @* Action Template *@
                        <script id="orderActionTemplate" type="text/html">
                            @*<a href="#" class="table-link">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a class="table-link" data-bind="click: $root.editOrder">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a href="#" class="table-link danger">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>*@
                        </script>
                        @* List View Template *@
                        <script id="orderListViewTemplate" type="text/html">
                            <tr>
                                <td>
                                    <!-- ko if: isDirectSale()==true -->
                                    <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/forwardicon.png")" alt="" />
                                    <!-- /ko -->
                                    <!-- ko if: isDirectSale()==false -->
                                    <img src="@Url.Content("~/Content/themes/Centaurus/img/samples/arrow_down.png")" alt="" />
                                    <!-- /ko -->
                                    <a data-bind="text: companyName, click: $root.editOrder" style="cursor:pointer;" class="user-link"></a>
                                    <span class="user-subhead">
                                        <span data-bind="text: name"></span>
                                        <span data-bind="text: ' '"></span>
                                        <span data-bind="text: noOfItemsUi"></span>
                                    </span>
                                </td>

                                <td>
                                    <span data-bind="dateString: creationDate, datePattern: 'DD/MM/YYYY'"></span>
                                </td>
                                <td>
                                    <span class="label label-success" data-bind="style: { background: flagColor }"><i class="fa fa-flag"></i></span>
                                </td>
                                <td>
                                    <span data-bind="text: orderCode"></span>
                                </td>
                                @*<td style="width: 20%;">
                                        <!-- ko template: { name: 'orderActionTemplate' } -->
                                        <!-- /ko -->
                                    </td>*@
                            </tr>
                        </script>

                        @* Tab Items Lists*@
                        <script id="tabItemsList" type="text/html">
                            <div class="main-box-body main-box clearfix">
                                <div class="table-responsive">
                                    <table id="OrderListtbl" class="table user-list">
                                        <thead>
                                            <tr>
                                                <th class="col-lg-4"><span>Customer</span></th>
                                                <th class="col-lg-3"><span>Invoice Date</span></th>
                                                <th class="col-lg-2"><span>Flag</span></th>
                                                <th class="col-lg-3"><span>Invoice Code</span></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- ko template: { name: 'orderListViewTemplate', foreach: orders } -->
                                            <!-- /ko -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div id="pagerDiv" class="pull-right">
                                <!-- ko with: pager -->
                                @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                <!-- /ko -->
                            </div>
                        </script>
                    </div>
                    @Html.Partial("InvoiceDetail")
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_CompanySelector.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_phraseLibraryDialog.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_StockDialog.cshtml")

@section Scripts{
    <script>
        require(["order/order.view", "common/confirmation.view", "common/companySelector.view", "common/phraseLibrary.view", "common/stockItem.view"]);

        $(function () {
            $('#libilling').addClass('active');
            $('.bs-example-tooltips a').popover();
        });



    </script>

}             
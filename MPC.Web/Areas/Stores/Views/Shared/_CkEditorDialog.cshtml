
<div class="modal fade" id="ckEditorDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 838px;" class="modal-dialog" data-bind="with:$root.selectedWidget">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-8 col-sm-8" style="padding-bottom:10px;">
                    <div class="col-xs-10">
                    </div>
                    <div class="col-xs-1">
                        <button type="button" class="btn btn-primary pull-right" data-bind="click:$root.onSaveWidgetParamFromCkEditor">Save</button>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="main-box clearfix">
                        <textarea name="html_link_content" id="content" data-bind="editor: paramValue, valueUpdate: 'afterkeydown'">TEXT</textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

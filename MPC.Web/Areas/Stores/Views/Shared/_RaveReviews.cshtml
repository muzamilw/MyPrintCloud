

<div class="modal fade" id="rave" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content" data-bind="with: $root.selectedRaveReview">
            <div class="modal-header" id="dialgHeaderPadding">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Rave Review</h4>
            </div>
            <div class="row">
                <div class="col-lg-12 outerDiv-Padding form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-3 text-right">
                            <label for="txtProductName" class="control-label text-right tooltip-float">Author's Name</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="txtProductName" placeholder="Enter Review Name" data-bind="value: reviewBy, validationTooltip: reviewBy">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-3 text-right">
                            <label for="txtProductName" class="control-label text-right tooltip-float">Their Quote</label>
                        </div>
                        <div class="col-lg-6">
                            <textarea class="form-control" id="txtNotes1" rows="5" data-bind="value: review, validationTooltip: review"></textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-3 text-right">
                            <label for="txtSortOrder" class="control-label text-right tooltip-float">Sort Order</label>
                        </div>
                        <div class="col-lg-3">
                            <input type="text" class="form-control textAlignRight" id="txtSortOrder" placeholder="Enter Sort Order" data-bind="value: sortOrder, validationTooltip: sortOrder">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-3 text-right">

                            <label class="control-label text-right tooltip-float" for="switchFeaturedProduct">Display</label>
                        </div>
                        <div class="col-lg-6">
                            <div class="onoffswitch">
                                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchDisplay" data-bind="checked: isDisplay">
                                <label class="onoffswitch-label" for="switchDisplay">
                                    <div class="onoffswitch-inner"></div>
                                    <div class="onoffswitch-switch"></div>
                                </label>
                            </div>
                            <span class="help-block text-right"></span>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="modal-footer" style="padding-left:0;padding-right:0;">
                <div style="padding-left:4px;padding-right:8px;">
                    <button type="button" class="btn btn-primary" data-bind="click: $root.onSaveRaveReview, css: { 'btn-warning': hasChanges() }, enable: hasChanges()">Save</button>
                    <button type="button" class="btn btn-default" data-bind="click: $root.onCloseRaveReview" style="margin-left: 0px;">Close</button>
                    <button type="button" class="btn btn-danger archiveButton" data-bind="click:$root.onDeleteRaveReview, enable: $root.selectedRaveReview().reviewId() != undefined">Archive</button>
                </div>
            </div>
        </div>
    </div>
</div>
@* Wizard Popup ends here*@
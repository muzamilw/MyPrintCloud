

<div class="modal fade" id="smartFormDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none; max-height: 700px; overflow-y: auto;">
    <div style="width:838px;" class="modal-dialog" data-bind="with:$root.selectedSmartForm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Smart Form Detail</h4>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-12 clearfix">
                    <div class="col-lg-7">
                        <div class="smartFormArea" data-bind="drop: $root.droppedSmartFormArea">
                            <div class="col-lg-12 form-horizontal outerDiv-Padding">
                                <div class="form-group">
                                    <div class="col-lg-5 text-right">
                                        <div class="bs-example-tooltips tooltip-float-width">
                                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Smart Form Name" data-original-title="" title="">
                                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                                            </a>
                                        </div>
                                        <label for="name" class="control-label text-right tooltip-float">
                                            Smart Form Name
                                        </label>
                                    </div>
                                    <div class="col-lg-5">
                                        <input type="text" class="form-control" id="name">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-5 text-right">
                                        <div class="bs-example-tooltips tooltip-float-width">
                                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Heading" data-original-title="" title="">
                                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                                            </a>
                                        </div>
                                        <label for="heading" class="control-label text-right tooltip-float">
                                            Heading
                                        </label>
                                    </div>
                                    <div class="col-lg-5">
                                        <input type="text" class="form-control" id="heading">
                                    </div>
                                </div>
                                <hr />
                            </div>
                            <ul style="list-style: none;padding: 15px;cursor:move;" data-bind="sortable: { template: 'smartFormDetailItemTemplate', data: smartFormDetails }"></ul>

                            @*<div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th><span></span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- ko template: { name: 'smartFormDetailItemTemplate', foreach: smartFormDetails }--> 
                                        <!-- /ko -->

                                    </tbody>
                                </table>
                            </div>*@
                        </div>
                    </div>
                    <div class="col-lg-5 smartFormVariableArea">
                        <div class="dd-item dd-item-list" data-id="15">
                            <div class="dd-handle-list" style="cursor: move"><i class="fa fa-bars"></i></div>
                            <div class="dd-handle">
                                <span data-bind="text:$root.groupCaption,drag: $root.draggedGroupCaption" style="cursor: move;z-index: 10000"></span>
                                <div class="nested-links">
                                    <a href="#" class="nested-link"></a>
                                </div>
                            </div>
                        </div>
                        <div class="dd-item dd-item-list" data-id="15">
                            <div class="dd-handle-list" style="cursor: move"><i class="fa fa-bars"></i></div>
                            <div class="dd-handle">
                                <span data-bind="text:$root.lineSeperator,drag: $root.draggedLineSeperator" style="cursor: move;z-index: 10000"></span>
                                <div class="nested-links">
                                    <a href="#" class="nested-link"></a>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive smartFormVariableTableArea">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th><span>System Variables</span></th>
                                        <th><span>Variable Scope</span></th>
                                        <th><span>Type</span></th>
                                        <th><span>Tag</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'fieldVariableForSmartFormItemTemplate', foreach: $root.fieldVariablesForSmartForm }-->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <br />
                <hr />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>

</div>


@* Wizard Popup ends here*@

<script id="fieldVariableForSmartFormItemTemplate" type="text/html">
    <tr data-bind="drag: $root.draggedVariableField" style="cursor: move;z-index: 10000" title="Drag variable to add to the left panel">
        <td data-bind="text:variableName"></td>
        <td data-bind="text:scopeName"></td>
        <td data-bind="text:typeName"></td>
        <td data-bind="text:variableTag"></td>
    </tr>
</script>

<script id="smartFormDetailItemTemplate" type="text/html">
    <li>
        <div data-bind="html:html"></div>
    </li>
</script>



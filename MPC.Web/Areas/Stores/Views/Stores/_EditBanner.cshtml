@{
    ViewBag.Title = "Edit banner";
}



<div class="modal fade" id="myEditBannerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="pull-left"><h4 class="modal-title">Banner Detail</h4></div>
                <div class="pull-right">
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary pull-right" data-bind="click:$root.onSaveBanner">Save</button>
                </div>
            </div>

            <div class="col-lg-12 form-horizontal outerDiv-Padding" data-bind="with:$root.selectedCompanyBanner">
                <div class="form-group">
                    <div class="col-lg-5 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Product Page Banner" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtCompanyName" class="control-label text-right tooltip-float">Banner main Image (PNG 400 X 250 pixels)</label>

                    </div>

                    <div class="col-lg-6">
                        <div id="dropzone1" class="dropzonepl">
                            <form id="demo-upload2" class="dropzone dz-clickable" style="min-height: 200px; width: 250px;" action="#">
                                <div class="dz-default dz-message">
                                    <span>Drop file here to upload</span>
                                </div>
                            </form>
                        </div>
                        <span class="help-block text-right"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Select Product Type" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>
                        <label class="control-label text-right tooltip-float">Banner set</label>
                    </div>
                    <div class="col-lg-5">
                        <select class="form-control">
                            <option>Summer Set</option>
                            <option>Winter Set</option>
                            <option>Spring Set</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <div class="btn btn-primary pull-left" data-bind="click:$root.onAddSetBanner">
                            @*<i class="fa fa-plus-circle fa-lg"></i>*@...
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtBannerHead" class="control-label text-right tooltip-float">Banner Heading</label>

                    </div>

                    <div class="col-lg-5">
                        <input type="text" class="form-control" id="txtBannerHead" data-bind="value:heading">
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtSortOrder" class="control-label text-right tooltip-float">Description</label>

                    </div>

                    <div class="col-lg-5">
                        <input type="text" class="form-control" id="txtdesc" data-bind="value:description">
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtSortOrder" class="control-label text-right tooltip-float">Item URL</label>

                    </div>

                    <div class="col-lg-5">
                        <input type="text" class="form-control" id="txtItemUrl" data-bind="value:itemURL">
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtSortOrder" class="control-label text-right tooltip-float">Button URL</label>

                    </div>

                    <div class="col-lg-5">
                        <input type="text" class="form-control" id="txtBtnUrl" data-bind="value:buttonURL">
                    </div>

                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


@* Wizard Popup ends here*@
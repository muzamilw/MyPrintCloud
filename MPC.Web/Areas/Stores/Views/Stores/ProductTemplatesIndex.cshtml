@{
    ViewBag.Title = "Templates";
    Layout = null;
}
@model MPC.Models.ResponseModels.ProductTemplateListResponseModel

<div style="padding-bottom: 20px;">
    <table cellspacing="0" cellpadding="5" style="width:100%;border-collapse:collapse;">
        <thead>
            <tr style="border: 2px solid #f3f3f3;">
                <th style="width: 15%; text-align: left"><span>PARENT CATEGORY</span></th>
                <th style="width: 15%; text-align: left"><span>SUB CATEGORY</span></th>
                <th style="width: 15%; text-align: left"><span>PRODUCT CODE</span></th>
                <th style="width: 30%; text-align: left"><span>PRODUCT NAME</span></th>
                <th style="width: 20%; text-align: left"><span>THUMBNAIL</span></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductTemplateList as List<MPC.Models.DomainModels.usp_GetStoreProductTemplatesList_Result>)
            {
                <tr style="  font-style: normal;
            font-weight: normal !important;
            font-size: 15px;
            border-left: 0px;
            border-right: 0px;
            color: Black;
            border-bottom: 2px solid #f3f3f3;" align="top">
                    <td>
                        <span style="font-weight: bold;font-family:'Open Sans Condensed', sans-serif;">
                            @item.ParentCategory
                        </span>


                    </td>
                    <td>
                        <span style="font-weight: bold;font-family:'Open Sans Condensed', sans-serif;">
                            @item.CategoryName
                        </span>
                    </td>
                    <td align="left" valign="top" style="border-left: 0px;border-right: 0px;">
                        <span style="font-weight: bold;font-family:'Open Sans Condensed', sans-serif;">
                            @item.ProductCode
                        </span>
                    </td>
                    <td align="left" valign="top" style="border-left: 0px;border-right: 0px;">
                        <span style="font-weight: bold;font-family:'Open Sans Condensed', sans-serif;">
                            @item.ProductName
                        </span>
                    </td>
                    <td align="left" style="vertical-align: middle;">
                        <img src="@item.TemplatePath" style="width: 30%; height: 10%; background: #a9a9a9;">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




@section Scripts{

    
}

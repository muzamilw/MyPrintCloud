
<div class="modal fade my-modal" id="addEditCampaignEmailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 838px;" class="modal-dialog" data-bind="with:$root.selectedEmail">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Email Detail</h4>
            </div>

            <div class="col-lg-12 form-horizontal outerDiv-Padding">
                <div class="form-group">
                    <div class="col-lg-5 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">
                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>
                        <label for="txtBannerHead" class="control-label text-right tooltip-float">Campaign Name</label>
                    </div>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" id="txtBannerHead" data-bind="value:campaignName, validationTooltip:campaignName">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right" data-bind="visible:campaignType() === 3">
                        <div class="bs-example-tooltips tooltip-float-width">
                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>
                        <label for="txtBannerHead" class="control-label text-right tooltip-float">Start Date</label>
                    </div>
                    <div class="col-lg-5" data-bind="visible:campaignType() === 3">
                        <input type="text" class="form-control" data-bind="datepicker:startDateTime, validationTooltip:startDateTime">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right" data-bind="visible:(campaignType() === 2 ||campaignType() === 1)">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Select Product Type" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>
                        <label class="control-label text-right tooltip-float">Event</label>
                    </div>
                    <div class="col-lg-5" data-bind="visible(campaignType() === 2 ||campaignType() === 1)">
                        <select class="form-control" data-bind="options: $root.emailEvents, optionsText: 'EventName', optionsValue: 'EmailEventId',value:emailEventId, validationTooltip: emailEventId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right" data-bind="visible:campaignType() === 2 ">
                        <div class="bs-example-tooltips tooltip-float-width">
                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>
                        <label for="txtBannerHead" class="control-label text-right tooltip-float">Days After</label>
                    </div>
                    <div class="col-lg-5" data-bind="visible:campaignType() === 2 ">
                        <input type="text" class="form-control" id="txtBannerHead" data-bind="value:sendEmailAfterDays, validationTooltip:sendEmailAfterDays">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 text-right" data-bind="visible:(campaignType() === 2 || campaignType() === 3)">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="it will display selected banner set on store home page." data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>
                        <label class="control-label text-right tooltip-float">Active</label>

                    </div>
                    <div class="col-lg-6" data-bind="visible:(campaignType() === 2 || campaignType() === 3)">
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchCampaign" data-bind="checked:isEnabled">
                            <label class="onoffswitch-label" for="switchCampaign">
                                <div class="onoffswitch-inner"></div>
                                <div class="onoffswitch-switch"></div>
                            </label>
                        </div>
                        <span class="help-block text-right"></span>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <hr />
                <button type="button" class="btn btn-primary" data-bind="click:$root.onSaveEmail">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-left: 0px;">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12 clearfix">

    <div style="background-color:gainsboro; border-radius:3px">
        <header class="main-box-header clearfix">
            <div style="float:left;margin-left: 2px;"><span style="font-size:24px">Coupons & Discounts</span></div>
        </header>
        <div class="main-box-body clearfix">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="col-lg-2"><span>Discount Name</span></th>
                            <th class="col-lg-2"><span>Coupone Code</span></th>
                            <th class="col-lg-2"><span>Discount Type</span></th>
                            <th class="col-lg-2"><span>Discount Value</span></th>
                            <th class="col-lg-2"><span>Coupon Usage</span></th>
                            @*<th>&nbsp;</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ko template: { name: 'discountVoucherTemplate' , foreach: $root.discountVoucherpager } -->
                        <!-- /ko -->

                    </tbody>
                </table>
            </div>

        </div>
        <div id="pagerDiv">
            <ul class="pagination pull-right" style="margin-top:9px;">
                <!-- ko with: $root.discountVoucherpager -->
                @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                <!-- /ko -->
            </ul>
        </div>
    </div>
    <div class="col-lg-7 btn-group" style="float: left; margin-top: 6px; margin-left: -14px;">
        <div class="filter-block" data-bind="">
            <a class="btn btn-primary">
                Add New Voucher
            </a>
        </div>
    </div>

    <script id="discountVoucherTemplate" type="text/html">
        <tr>
            <td><a class="store-user-link" data-bind="text:name"></a></td>
            <td data-bind="text:couponCode"></td>
            <td data-bind="text:discountType"></td>
            <td data-bind="text:discountRate"></td>
            <td data-bind="text:couponUseType"></td>
        </tr>

    </script>

</div>

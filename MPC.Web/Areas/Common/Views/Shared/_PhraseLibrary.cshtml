<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Content/themes/Centaurus/js/CSJSRequestObject.js"></script>
<script>
    $(document).ready(function ()
    {
        $("#phrase-null-span").hide();
       
        setTimeout(function ()
        {
            var spinner = $("div#spinner");
            spinner.stop();
            spinner.fadeOut("fast");
            $.unblockUI(spinner);
        }, 1000);

        $("#child-phrase").click(function ()
        {
            $("#phrase-null-span").hide();
            setTimeout(Countingphraserows, 1000);
        });

        page = Request.QueryString("status").toString();

        if (page != null)
        {
            if (page == 'phraselibrary')
            {
                $("#child-dialog-title").hide();
                
                $("#phraseLibraryDialog").addClass("main-box-body clearfix");
                $("#phraseLibraryDialog").removeClass("modal-content");

                $("#phrase-libraryCloseButton").css("visibility", "hidden");

                
            }
            else if(page == 'null')
            {
                $("#child-dialog-title").show();

                $("#phraseLibraryDialog").removeClass("main-box-body clearfix");
                $("#phraseLibraryDialog").addClass("modal-content");

                $("#phrase-libraryCloseButton").css("visibility", "visible");
            }
        }
    });

    

    function Countingphraserows()
    {
        var rows = $('#phrase-records tbody tr.phrase-rows').length;

        if (rows == 0)
        {
            $("#phrase-null-span").show();
        }
        else if (rows != 0)
        {
           $("#phrase-null-span").hide();
        }
    }
</script>


<div class="modal fade my-modal" id="stockDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div id="stockDialogMainContainer" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Stocks List</h4>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-12 clearfix">
                    <header class="main-box-header clearfix">
                        <div class="filter-body set-filter-margin" id="filter">
                            <form data-bind="submit: $root.searchStockItems">
                                <div class="filter-block pull-right">

                                    <div class="form-group pull-right">
                                        <input type="text" class="form-control" placeholder="Search..." data-bind="value: stockDialogFilter">
                                        <i class="fa fa-search search-icon" ></i>
                                    </div>

                                </div>
                            </form>
                            <div class="clearfix">
                            </div>
                        </div>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th><a href="#"><span>Stock Name</span></a></th>
                                        <th><a href="#"><span>Category</span></a></th>
                                        <th><a href="#" class="asc"><span>Location</span></a></th>
                                        <th>Weight</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'stockDialogItemTemplate', foreach: stockItems } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <footer class="main-box-header pull-right">
                        <div id="pagerDiv">
                            <!-- ko with: stockDialogPager -->
                            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                            <!-- /ko -->
                        </div>
                    </footer>
                </div>
            </div>
            <div class="modal-footer">
                <hr />
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@* Stock Item Template *@
<script id="stockDialogItemTemplate" type="text/html">
    <tr data-bind="click: $parent.onSelectStockItem">
        <td data-bind="text: name"></td>
        <td data-bind="text: category"></td>
        <td data-bind="text: location"></td>
        <td data-bind="text: weight"></td>
    </tr>
</script>

@* Wizard Popup ends here*@
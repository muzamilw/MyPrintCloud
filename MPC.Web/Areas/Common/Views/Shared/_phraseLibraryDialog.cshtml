@{
    ViewBag.Title = "Paper Sheet Dialog";
}
<div class="modal fade" id="phraseLibraryDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Phrase Book</h4>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        <div class="clearfix">
                            @*<header class="main-box-header clearfix">
                                    <h4>SECTIONS</h4>

                                </header>*@
                            <div style="padding-right: 5px;" id="sectionItems">
                                <ol class="dd-list" id="widgetList">
                                    <!-- ko template: { name: 'sectionIemTemplate', foreach: $root.sections }-->
                                    <!-- /ko -->
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 form-horizontal">
                        <div class="clearfix">
                            <header class="main-box-header clearfix">

                                <div class="filter-block pull-left">
                                    <h4>PHRASE</h4>
                                </div>
                                <div class="filter-block pull-right">
                                    <a href="#" class="btn btn-primary">
                                        <i class="fa fa-plus-circle fa-lg"></i>
                                    </a>
                                </div>
                            </header>
                            <div class="clearfix">
                                <div class="table-responsive">
                                    <table id="markupTablle" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- ko template: { name: 'phraseItemTemplate' , foreach: $root.sections } -->
                                            <!-- /ko -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>

                </div>
            </div>


            <div class="modal-footer">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
            </div>

        </div>
    </div>
</div>


<script id="sectionIemTemplate" type="text/html">
    <li class="dd-item dd-item-list">
        <div class="dd-handle-list"><i class="fa fa-bars"></i></div>
        <div class="dd-handle">
            <span data-bind="text: name" style="cursor: pointer"></span>
        </div>
    </li>
</script>



<script id="phraseItemTemplate" type="text/html">
    <tr>
        <td>
            <input class="form-control" type="text" data-bind="value: name" />
        </td>

        <td>
            <a href="#" class="table-link danger" title="Delete">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </td>
    </tr>
</script>
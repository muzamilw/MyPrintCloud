@{
    ViewBag.Title = "Paper Sheet Dialog";
}
<div class="modal fade" id="supplierDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" data-bind="visible: !isSupplierEditorVisible()">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Select Supplier</h4>
            </div>
            <br />
            <div class="col-lg-12" data-bind="visible: !isSupplierEditorVisible()">
                <!-- ko template: { name: 'supplierFilterTemplate' } -->
                <!-- /ko -->
                <div class="col-lg-12 clearfix">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="main-box no-header clearfix">
                                <div class="main-box-body clearfix">
                                    <div class="table-responsive">
                                        <table id="supplierTablle" class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>&nbsp;</th>
                                                    <th> <span>Name<span></span></span></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- ko template: { name: 'supplierItemTemplate' , foreach: $root.suppliers } -->
                                                <!-- /ko -->
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                            <div id="pagerDiv">
                                <!-- ko with: $root.supplierPager -->
                                @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                <!-- /ko -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
            </div>
            @Html.Partial("~/Areas/Common/Views/Shared/_SupplierEditor.cshtml")
        </div>
    </div>
    @* Filter Template *@
    <script id="supplierFilterTemplate" type="text/html">
        <div class="filter-body">
            <div class="filter-block pull-left">
                <div class="pull-left spanfilterlbl">
                    Search: &nbsp;
                </div>
                <div class="form-group pull-left">
                    <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.searchSupplierFilter">
                    <i class="fa fa-search search-icon"></i>
                </div>
                <div class="pull-left">
                    <button type="submit" class="btn btn-primary" data-bind="click:$root.searchSupplier">Search</button>
                    <button type="submit" class="btn btn-default" data-bind="click:$root.reset">Reset</button>
                </div>
            </div>
            <div class="clearfix">
                <div class="pull-right">
                    <button class="btn btn-primary" data-bind="click:$root.onCreateSupplier">
                        <i class="fa fa-plus-circle fa-lg"></i>&nbsp;New Supplier
                    </button>
                </div>
            </div>
        </div>
    </script>

</div>

<script id="supplierItemTemplate" type="text/html">
    <tr data-bind="click: $root.selectedSupplier">
        <td>
            <input type="checkbox" data-bind="checked: isSelected " />
        </td>
        <td>
            <span style="font-size: 1.105em; color: #0094ff;" data-bind="text: name"></span>
            <br />
            <span style="font-size: 0.875em; color: black;" data-bind="text:url"></span>
        </td>
    </tr>
</script>

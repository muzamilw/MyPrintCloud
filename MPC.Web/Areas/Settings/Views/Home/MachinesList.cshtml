@{
    ViewBag.Title = "Machines List";
}
@section leftmenue {

}

<div class="row" id="divMachineListBinding">
    <div class="col-lg-12" data-bind="visible: !isEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                  
                    <li class="active"><span>&nbsp;</span></li>
                </ol>
                <h1 style="padding-left:0px;">Machines</h1>
                <div class="pull-right top-page-ui">
                    <a href="~/Settings" class="btn  btn-default" style="float: right;margin-bottom: 10px;margin-left: 15px;">Close</a>
                        <a class="btn btn-primary" data-bind="click: $root.createNewMachine">
                        <i class="fa  fa-lg"></i>&nbsp;
                        <span id="btnCreateNewMachine"> Create New Press </span>
                        </a>
                      
                        <div id="addMachine">
                            &nbsp;
                        </div>
</div>
            </div>
        </div>
        <div class="row">
                        <div class="col-lg-12 col-md-8 col-sm-8">
                            <div class="main-box clearfix machineDetailsHeader">
                                <div class="tabs-wrapper profile-tabs">
                                    <ul class="nav nav-tabs">
                                        <li class="active"><a href="#tab-presses" data-bind="click: $root.GetMachineListForAll" data-toggle="tab">Presses</a></li>
                                        <li><a href="#tab-Guillotine" data-bind="click: $root.GetMachineListForGuillotine" data-toggle="tab">Guillotine</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane fade in active" id="tab-presses">
                                            <div class="col-lg-12">
                                                <div class="no-header clearfix">
                                                    <div class="main-box-body clearfix">
                                                        <div class="table-responsive">
                                                            <h2>Configure sheet (or roll) fed Digital and Litho presses and plotters. Set guillotines throat intake and cutting speeds</h2>
                                                            <br />
                                                            <table class="table user-list">
                                                                <thead>
                                                                    <tr>
                                                                        <th><span>Machine Name</span></th>
                                                                        <th><span>Max Sheet Size</span></th>
                                                                        <th><span>Min Sheet Size</span></th>
                                                                        <th><span>Calculation Method</span></th>
                                                                        <th>&nbsp;</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <!-- ko template: { name: 'itemMachineTemplate' , foreach: $root.machineList } -->
                                                                    <!-- /ko -->

                                                                </tbody>
                                                            </table>

                                                        </div>

                                                    </div>
                                                </div>
                                                <div id="pagerDiv" class="pull-right">
                                                    <!-- ko with: pager -->
                                                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                                    <!-- /ko -->
                                                </div>

                                            </div>

                                        </div>
                                        <div class="tab-pane fade " id="tab-Guillotine">
                                            <div class="col-lg-12">
                                                <div class="no-header clearfix">
                                                    <div class="main-box-body clearfix">
                                                        <div class="table-responsive">
                                                            <h2>Configure sheet (or roll) fed Digital and Litho presses and plotters. Set guillotines throat intake and cutting speeds</h2>
                                                            <br />
                                                            <table class="table user-list">
                                                                <thead>
                                                                    <tr>
                                                                        <th><span>Machine Name</span></th>
                                                                        <th><span>Max Sheet Size</span></th>
                                                                        <th><span>Min Sheet Size</span></th>
                                                                        <th><span>Calculation Method</span></th>
                                                                        <th>&nbsp;</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <!-- ko template: { name: 'itemMachineTemplate' , foreach: $root.machineList } -->
                                                                    <!-- /ko -->

                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="pagerDiv" class="pull-right">
                                                    <!-- ko with: pager -->
                                                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                                    <!-- /ko -->
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Areas/Settings/Views/Home/MachinesDetail.cshtml")

    <!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    @Html.Partial("~/Areas/Common/Views/Shared/_StockDialog.cshtml")
    <!-- /ko -->
</div>
<script id="itemMachineTemplate" type="text/html">
    @*<tr data-bind="click: $root.selectItem, css: { selectedRow: $data === $root.selectedMachine}">*@
    <tr>
        <td>
            <a href="#" data-bind="text:MachineName, click: $root.onEditItem" class="user-link"></a>
            <span data-bind="text:Description" class="user-subhead machine-list-margin"></span>
        </td>
        <td><span data-bind="text: maximumsheetwidth"> </span><span>*</span> <span data-bind="text: maximumsheetheight"> </span>  </td>
        <td><span data-bind="text: minimumsheetwidth"> </span><span>*</span> <span data-bind="text: minimumsheetheight"> </span>  </td>

        <td data-bind="text: LookupMethodName"></td>
        <td id="actionColumn">
            <!-- ko template: { name: "MachineActionsTemplate",templateEngine: new ko.nativeTemplateEngine() } -->
            <!-- /ko -->

        </td>
    </tr>
</script>

<script id="MachineActionsTemplate" type="text/html">
    <a href="#" class="table-link danger" data-bind="click : $root.onArchiveMachine" style="float: right">
        <span class="fa-stack ">
            <i class="fa fa-square fa-stack-2x"></i>
            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
        </span>
    </a>
    <a class="table-link" data-bind="click : $root.onEditItem" style="float: right">
        <span class="fa-stack">
            <i class="fa fa-square fa-stack-2x "></i>
            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
        </span>
    </a>
</script>
@section Scripts{
    <script src="~/Scripts/jquery.form.js"></script>


    <script>
        require(["machine/machine.view", "common/confirmation.view", "common/stockItem.view"]);
        $(function () {
            $('#lisettings').addClass('active');
            $('#limissettings').addClass('active');
            $('#liMachineList').addClass('active');
           
        });
        

    </script>
}
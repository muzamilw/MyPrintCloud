@{
    ViewBag.Title = "Delivery Carrier";
}
<div class="row" id="carrierdeliveryBinding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">Home</a></li>
                    <li class="active">Delivery Cost Centers</li>

                </ol>
                <h1>Delivery Carriers</h1>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="pull-right">
                <button id="open-wizard" class="btn btn-primary pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i>&nbsp;Add Delivery Carrier
                </button>
            </div>
        </div>
        <div>
            &nbsp;
        </div>
        <div class="row" id="user-profile">

            <div class="col-lg-12 form-horizontal ">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th><a href="#"><span>Name</span></a></th>
                                        <th><a href="#"><span>URL</span></a></th>
                                        <th><a href="#"><span>API Key</span></a></th>
                                        <th>STATUS</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <!-- ko template: { name: 'listDeliveryCarrierTemplate' , foreach: $root.deliverycarrierlist } -->
                                    <!-- /ko -->

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="listDeliveryCarrierTemplate" type="text/html">
        <tr>
            <td>
                <a href="#" data-bind="text:CarrierName"></a>
            </td>
            <td data-bind="text:Url"></td>
            <td data-bind="text:ApiKey"></td>
            <td>
                <!-- ko if: isEnable == true -->
                <span class="label label-success">Active</span>
                <!-- /ko -->
                <!-- ko if: isEnable == false -->
                <span class="label label-danger">In-Active</span>
                <!-- /ko -->
            </td>
        </tr>
    </script>

</div>

@Html.Partial("_AddEditDeliveryCarriers")

@section Scripts {
     
    <script type="text/javascript">
        require(["deliverycarrier/deliverycarrier.view"]);
        $(document).ready(function ()
        {
            $('#lisettings').addClass('active');
            $('#limissettings').addClass('active');

        });

      

     </script>
}
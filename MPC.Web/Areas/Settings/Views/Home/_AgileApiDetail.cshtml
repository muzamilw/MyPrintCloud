

<div class="main-box-body clearfix" data-bind="visible: $root.isApiDetailVisible" style="display:none;">
    <div class="col-md-12 form-horizontal" style="margin-top:25px;padding-left:0px;">
        <div style="margin-bottom:15px;">
            <p class="group-header-description"> Configure the Agile API Credentials</p>
            <div style="height:20px;">
                &nbsp;
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-lg-5 text-right">
                    <label for="txtApiKey" class="control-label text-right tooltip-float">
                        Agile API Key
                    </label>

                </div>

                <div class="col-lg-6">
                    <input type="text" class="form-control" id="txtApiKey" placeholder="Enter API key" data-bind="value:agileApiKey">
                </div>

            </div>

            <div class="form-group">
                <div class="col-lg-5 text-right">
                    <label for="txtApiUrl" class="control-label text-right tooltip-float">
                        Agile API URL
                    </label>
                </div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="txtApiUrl" placeholder="Enter API URL" data-bind="value:agileApiUrl">
                </div>

            </div>
            
            <div class="form-group">
                <div class="col-lg-5 text-right">
                    <label for="txtApiUrl" class="control-label text-right tooltip-float">
                        Active
                    </label>
                </div>
                <div class="col-lg-6">
                    <div class="onoffswitch">
                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchActive" data-bind="checked:isAgileApiActive">
                        <label class="onoffswitch-label" for="switchActive">
                            <div class="onoffswitch-inner"></div>
                            <div class="onoffswitch-switch"></div>
                        </label>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
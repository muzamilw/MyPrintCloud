@{
    ViewBag.Title = "Inventory Category";
}

@section leftmenue {

}
<div class="row" id="inventoryCategoriesBinding">
    <div class="col-lg-12" data-bind="visible: !$root.isStockCategoryEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">Home</a></li>
                    <li class="active"><span>Inventory Categories</span></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left">Inventory Categories</h1>
                    <div class="pull-right top-page-ui">
                        <a data-toggle="modal" data-bind="click: $root.createNewStockCategory" class=" btn btn-primary">
                            <i class="fa fa-plus-circle fa-lg"></i>Add Inventory Category
                        </a>
                    </div>
                    <div class="filter-block pull-right">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span id="0">Name</span></th>
                                        <th><span id="1">Description</span></th>
                                        <th><span id="3"></span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko foreach: $root.stockCategories -->
                                    <!-- ko template: { name: 'itemStockCategory' } -->
                                    <!-- /ko -->
                                    <!-- /ko -->
                                    <!-- ko if: !($root.stockCategories().length > 0) -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDiv">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12" data-bind="visible: $root.isStockCategoryEditorVisible(), with: $root.selectedStockCategory">
        <div class="row">
            <div class="col-lg-12">
                <div class="clearfix">
                    <h1 class="pull-left">Add/Edit Inventory Categories</h1>
                    <div class="pull-right top-page-ui">
                        <a data-toggle="modal" data-bind="click: $root.saveStockCategory" class=" btn btn-primary">
                            <i class="fa fa-plus-circle fa-lg"></i>Save
                        </a>
                        <a data-toggle="modal" data-bind="click: $root.closeEditDialog" class=" btn btn-primary">
                            <i class="fa fa-plus-circle fa-lg"></i>Close
                        </a>
                    </div>
                    <div class="filter-block pull-right">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <tr>
                                    <td><span> Code</span></td>
                                    <td><input type="text" data-bind="value: code, validationTooltip: code" /></td>
                                </tr>
                                <tr>
                                    <td><span>Name</span></td>
                                    <td><input type="text" data-bind="value: name, validationTooltip: name" /></td>
                                </tr>
                                <tr>
                                    <td><span>Description</span></td>
                                    <td><input type="text" data-bind="value: description, validationTooltip: description" /></td>
                                </tr>
                                <tr>
                                    <td><span>Weight</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemWeight">
                                    </td>

                                    <td><span>Color</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemColour">
                                    </td>
                                </tr>
                                <tr>
                                    <td><span>Item Custom Size</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemSizeCustom">
                                    </td>

                                    <td><span>Item Paper Size</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemPaperSize">
                                    </td>
                                </tr>
                                <tr>
                                    <td><span>Coating Type</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCoatedType">
                                    </td>

                                    <td><span>Coated</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCoated">
                                    </td>
                                </tr>
                                <tr>
                                    <td><span>Exposure</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemExposure">
                                    </td>

                                    <td><span>Processing Charge</span></td>
                                    <td>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCharge">
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <h3>Sub Categories</h3>
                        <div class="main-box-body clearfix">
                            <header class="main-box-header clearfix">
                                @*<h2>Sub Categories</h2>*@
                                <div class="filter-block pull-right">
                                    @*<div class="form-group pull-left">
                                            <input type="text" class="form-control" placeholder="Search...">
                                            <i class="fa fa-search search-icon"></i>
                                        </div>*@
                                    <a href="#" class="btn btn-primary pull-right" data-bind="click: $root.onCreateNewStockSubCategory">
                                        <i class="fa fa-plus-circle fa-lg"></i>&nbsp;Add Sub Category
                                    </a>
                                </div>
                            </header>
                            <div class="clearfix">
                                <div class="table-responsive">
                                    <table id="subCategoriesTable" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th> <span>Code<span></span></span></th>
                                                <th> <span>Name<span></span></span></th>
                                                <th> <span>Description<span></span></span></th>
                                                <th>&nbsp;</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- ko template: { name: $root.templateToUseStockSubCategories , foreach: $root.selectedStockCategory().stockSubCategories } -->
                                            <!-- /ko -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script id="actionsTemplate" type="text/html">
        <a class="table-link" data-bind="click : $root.onEditItem">
            <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
            </span>
        </a>
        <a href="#" class="table-link danger" data-bind="click : $root.deleteStockCategory">
            <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
            </span>
        </a>
    </script>
    <script id="itemStockCategory" type="text/html">
        <tr data-bind="click: $root.selectStockCategory, css: { selectedRow: $data === $root.selectedStockCategory}">
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td id="actionColumn">
                <!-- ko template: { name: "actionsTemplate",templateEngine: new ko.nativeTemplateEngine() } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>

    <script id="editActionStockSubCategoryTemplate" type="text/html">
        <a href="#" class="table-link" data-bind="click: $root.selectSubCategory, css: { selectedRow: $data === $root.selectedStockSubCategory() }">
            <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
            </span>
        </a>
    </script>
    <script id="deleteActionStockSubCategoryTemplate" type="text/html">
        <a href="#" class="table-link danger" data-bind="click: $root.onDeleteStockSubCategory" title="Delete">
            <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
            </span>
        </a>
    </script>
    <script id="editStockSubCategoryTemplate" type="text/html">
        <tr data-bind="css: { selectedRow: $data === $root.selectedStockSubCategory() }">
            <td>
                <input type="text" data-bind="value: code, validationTooltip: code" />
            </td>
            <td>
                <input type="text" data-bind="value: name, validationTooltip: name" />
            </td>
            <td>
                <input type="text" data-bind="value: description, validationTooltip: description" />
            </td>
            <td>
                <!-- ko template: { name: 'editActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
    <script id="itemStockSubCategoryTemplate" type="text/html">
        <tr>
            <td data-bind="text: code"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: description"></td>
            <td>
                <!-- ko template: { name: 'editActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
            <td>
                <!-- ko template: { name: 'deleteActionStockSubCategoryTemplate' } -->
                <!-- /ko -->
            </td>
        </tr>
    </script>
</div>

@section Scripts{

    <script>
        require(["inventoryCategory/inventoryCategory.view", "common/confirmation.view"]);
        $(function () {
            $('#lisettings').addClass('active');
            $('#ligeneralsettings').addClass('active');
            $('#liInventoryCategory').addClass('active');
        });
    </script>
}
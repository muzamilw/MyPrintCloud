@{
    ViewBag.Title = "Cost Centre Matrix";
}


<div class="modal fade my-modal" id="CostCentreMatrixModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 638px;" class="modal-dialog" data-bind="with: $root.SelectedMatrixVariable">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Cost Centre Matrix</h4>
            </div>
            <div class="col-lg-12 form-horizontal outerDiv-Padding">
                <div class="form-group">
                    <div class="col-lg-4 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" data-content="Enter Question" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>
                        <label for="Question" class="control-label text-right tooltip-float">Matrix title</label>
                    </div>
                    <div class="col-lg-6">
                        <input type="text" placeholder="Enter Matrix title" class="form-control" data-bind="value:Name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" data-content="Enter Type" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>
                        <label for="Type" class="control-label text-right tooltip-float">Description</label>
                    </div>
                    <div class="col-lg-6">
                        <textarea class="form-control" placeholder="Description" rows="3" data-bind="value:Description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4">
                        <label for="Answer" class="control-label text-right tooltip-float">Dimensions of Matrix</label>
                    </div>
                    <div class="col-lg-6">
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-5">
                        <div class="col-lg-5 text-right">
                             <label for="Answer" class="control-label text-right tooltip-float">Rows</label>
                        </div>
                        <div class="col-lg-6">
                            <select class="form-control" data-bind="options:$root.RowscolCountList,optionsText:'Text',optionsValue:'Id', value:RowsCount,event:{change:$root.UpdateMartix}"></select>
                            @*<input type="text" class="form-control" data-bind="autoNumeric:RowsCount, settings:{mDec:0,vMin:2,vMax:9}, event:{change:$root.UpdateMartix}">*@
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="col-lg-5 text-right">
                            
                            <label for="Answer" class="control-label text-right tooltip-float">Columns</label>
                        </div>
                        <div class="col-lg-6">
                            <select class="form-control" data-bind="options:$root.RowscolCountList,optionsText:'Text',optionsValue:'Id', value:ColumnsCount,event:{change:$root.UpdateMartix}"></select>
                            @*<input type="text" class="form-control" data-bind="autoNumeric:ColumnsCount, settings:{mDec:0,vMin:2,vMax:9}, event:{change:$root.UpdateMartix}">*@
                        </div>
                    </div>
                    <span id="WarningRowColUpdate" style="margin-left:-15px;font-size: smaller;color: red;font-weight: 400;"></span>
                </div>
                <div class="form-group">

                    
                        <div  style="padding:20px;">
                            <div class="table-responsive inlineGrid" style="border: 1px solid silver;">
                                <table class="table table-striped table-hover MatrixHeader">
                                    
                                    <tbody>
                                        <!-- ko template: { name: 'MatrixDetailTemplate' , foreach: MatrixDetailVariableList } -->
                                        <!-- /ko -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    @*</div>*@
                </div>

              
                
            </div>
            <div class="modal-footer">
                <hr />
                <button type="button" class="btn btn-primary" data-bind="click:$root.saveMatrixVariable, enable: hasChanges()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-left: 0px;">Close</button>
            </div>
        </div>
    </div>
</div>

<script id="MatrixDetailTemplate" type="text/html">
    <tr data-bind="foreach: $data" >
        <td >
            <input class="form-control" data-bind="value: Value, enable:Id() != -1" />
            
        </td>
    </tr>
</script>


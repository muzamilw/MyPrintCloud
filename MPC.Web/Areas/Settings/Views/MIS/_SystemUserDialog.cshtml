<div class="modal fade my-modal" id="editSystemUserDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" data-bind="with:$root.selectedSystemUser">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Role and Rights</h4>
            </div>
            <div class="row">

                <div class="col-lg-12 form-horizontal outerDiv-Padding">
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">FullName</label>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label" data-bind="text: fullName"></label>
                            @*<input type="text" class="form-control" id="roleTitle" placeholder="Enter Role Title" data-bind="value:fullName, validationTooltip: fullName, validationOnElement: fullName" />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Email</label>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label" data-bind="text: email"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Role</label>
                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" data-bind="options: $root.rolesList, optionsText: 'RoleName', optionsValue: 'RoleId', optionsCaption: 'Select Role', value: roleId"></select>                    
                        </div>
                    </div>
                    
                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: $root.onsaveSystemUser, enable: hasChanges, css: { 'btn-warning': hasChanges }">Save</button>
                <button type="button" class="btn btn-default" data-bind="click: $root.onCloseUser">Close</button>
            </div>
        </div>
    </div>
</div>


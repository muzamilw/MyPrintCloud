
@{
    ViewBag.Title = "Cost Centre Stock";
}


<div class="modal fade my-modal" id="CostCentreStockModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 538px;" class="modal-dialog" data-bind="with: $root.SelectedStockVariable">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Cost Centre Stock</h4>
            </div>
            <div class="col-lg-12 form-horizontal outerDiv-Padding">
                <div class="form-group">
                    <div class="col-lg-4 text-right">
                        @*<div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" data-content="Enter Question" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>*@
                        <label for="Question" class="control-label text-right tooltip-float">Stock Name</label>
                    </div>
                    <div class="col-lg-6">
                        <span data-bind="text:StockName"></span>
                       
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 text-right">
                        @*<div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" data-content="Enter Type" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>
                        </div>*@
                        <label for="Type" class="control-label text-right tooltip-float">Calculate Cost</label>
                    </div>
                    <div class="col-lg-6">
                        <select class="form-control" data-bind="options: $root.CalculateCostType, optionsText: 'Text', optionsValue: 'Id', value: CostType"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-3">
                        <br />
                        <label for="Answer" class="control-label text-right tooltip-float">Quantity</label>
                    </div>
                    <div class="col-lg-6">
                    </div>

                </div>
               
                <div class="form-group">
                    <div class="col-lg-4 text-right">
                       
                        <label for="Type" class="control-label text-right tooltip-float">Enter Quantity</label>
                    </div>
                    <div class="col-lg-2 PaddingleftZero radio" style="width: 47px;">
                        <input class="form-control PaddingleftZero" id="rdoQuantity" type="radio" value="qty" data-bind="checked: QuantityType" />
                        <label for="rdoQuantity">
                            &nbsp;
                        </label>
                    </div>
                    <div class="col-lg-5 PaddingleftZero">
                     
                        <input type="text" class="form-control" data-bind="value:quantityValue, enable:QuantityType() === 'qty'">
                      
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-lg-4 text-right">

                        <label for="Type" class="control-label text-right tooltip-float">System Variable</label>
                    </div>
                    <div class="col-lg-2 PaddingleftZero radio" style="width: 47px;">
                        <input class="form-control" id="rdoSystemVariable" type="radio" value="variable" data-bind="checked: QuantityType" />
                        <label for="rdoSystemVariable">
                            &nbsp;
                        </label>
                    </div>
                    <div class="col-lg-5 PaddingleftZero">

                        <select class="form-control" data-bind="options: $root.variableDropdownList, optionsText: 'Name', optionsValue: 'VarId', value: variableValue, enable:QuantityType() === 'variable'"></select>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-4 text-right">

                        <label for="Type" class="control-label text-right tooltip-float">Ask Quantity Question</label>
                    </div>
                    <div class="col-lg-2 PaddingleftZero" style="width: 47px;">
                        <input class="form-control" type="radio" value="question" data-bind="checked: QuantityType" />
                    </div>
                    <div class="col-lg-5 PaddingleftZero">

                        <input type="text" class="form-control" data-bind="value:questionValue, enable:QuantityType() === 'question'">

                    </div>
                </div>
              
            </div>
            <div class="modal-footer">
                <hr />
                <button type="button" class="btn btn-primary" data-bind="click:$root.AddtoInputControl">Select</button>
                @*<button type="button" class="btn btn-default" data-dismiss="modal" style="margin-left: 0px;">Close</button>*@
            </div>
        </div>
    </div>
</div>



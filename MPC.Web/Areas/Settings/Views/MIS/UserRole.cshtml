@{
    ViewBag.Title = "User Roles";
}
@section leftmenue {

}

<div class="row" id="userRolesBinding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12" style="margin-bottom:-11px;">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0;">User Roles</h1>
                </div>
                <div class="pull-right top-page-ui">
                    <a href="~/Settings" class="btn  btn-default" style="float: right;margin-bottom:10px;margin-left:5px;margin-right:-2px;">Close</a>
                    &nbsp;
                    <a data-toggle="modal" data-bind="click: $root.createNewUserRole" class=" btn btn-primary">
                        Add New Role
                    </a>
                </div>
                <div style="margin-top:35px; ">
                    &nbsp;
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <h3>Create and set roles for the system users</h3>
                        <span class="group-header-description">Manage users by setting their roles to access certain modules at certain level.</span>
                        <div style="height:20px;">
                            &nbsp;
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2">Role Title</th>
                                        <th class="col-lg-4">Description</th>
                                        <th class="col-lg-6">Access Modules</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'rolesListTemplate', foreach: rolesList } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>

    <script id="rolesListTemplate" type="text/html">
        <tr data-bind=" click: $root.editRole" style="cursor: pointer">
            <td>
                <div style="float:left;display:inline;">
                    <a href="#" data-bind="text: roleName" style="cursor:pointer;" class="user-link"></a>
                </div>                
            </td>
            <td>
                <span data-bind="text: roleDescription"></span>
            </td>
            <td>
                <span data-bind="text: roleRightsUi"></span>
            </td>            

        </tr>
    </script>
    @Html.Partial("_RoleRightsDialog")
</div>

@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")

@section Scripts{

    <script>
        require(["userRole/userRole.view", "common/confirmation.view"]);
       
    </script>
}


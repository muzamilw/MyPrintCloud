@{
    ViewBag.Title = "MPC Inventory";
}
@section leftmenue {

}
<div class="row" id="inventoryBinding">
    <div class="col-lg-12" data-bind="visible: !isInventoryEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">Home</a></li>
                    <li class="active"><span>Inventories</span></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left">Inventories</h1>
                    <div class="pull-right top-page-ui">
                        <button class="btn btn-primary" data-bind="click:createInventory">
                            <i class="fa fa-plus-circle fa-lg"></i>&nbsp;Add Inventory
                        </button>
                    </div>
                </div>
                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table id="inventoryTablle" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>&nbsp;</th>
                                        <th> <span>Name<span></span></span></th>
                                        <th> <span>Category<span></span></span></th>
                                        <th>Cost</th>
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'itemInventoryTemplate' , foreach: $root.inventories } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <div id="pagerDiv">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
        @* Filter Template *@
        <script id="filterTemplate" type="text/html">
            <div class="filter-body">
                <div class="filter-block pull-left">
                    <div class="pull-left spanfilterlbl">
                        Search: &nbsp;
                    </div>
                    <div class="form-group pull-left">
                        <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.searchFilter">
                        <i class="fa fa-search search-icon"></i>
                    </div>
                    <div class="form-group pull-left">
                        <select id="category" class="form-control" data-bind="options: $root.categories,optionsCaption:'Category', optionsText: 'Name', optionsValue: 'CategoryId',value:categoryFilter"></select>
                    </div>
                    <div class="form-group pull-left">
                        <select id="subCategory" class="form-control" data-bind="options: $root.filteredSubCategories,optionsCaption:'Sub Category', optionsText: 'Name', optionsValue: 'SubCategoryId',value:subCategoryFilter"></select>
                    </div>
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary" data-bind="click:$root.filterInventories">Search</button>
                        <button type="reset" class="btn btn-default" data-bind="click:$root.resetFilter">Reset</button>
                    </div>
                </div>
                <div class="clearfix">
                </div>
            </div>
        </script>
    </div>
    @Html.Partial("_InventoryEditor")
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_SupplierDialog.cshtml")
<!-- /ko -->
@section Scripts{
    <script src="~/Content/themes/Centaurus/js/wizard.js"></script>
    <script src="~/Content/themes/Centaurus/js/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        require(["inventory/inventory.view", "common/confirmation.view", "common/supplier.view"]);
        $(function () {
            $('#myWizard').wizard();
            $('#listores').addClass('active');
            //masked inputs
            $("#maskedDate").mask("99/99/9999");
            $("#maskedPhone").mask("(999) 999-9999");
            $("#maskedPhoneExt").mask("(999) 999-9999? x99999");
        });
    </script>
}

<script id="editActionInventoryTemplate" type="text/html">
    <a href="#" class="table-link" data-bind="click: $root.onEditInventory">
        <span class="fa-stack">
            <i class="fa fa-square fa-stack-2x"></i>
            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
        </span>
    </a>
</script>
<script id="deleteActionInventoryTemplate" type="text/html">
    <a href="#" class="table-link danger" data-bind="click: $root.onDeleteInventory" title="Delete">
        <span class="fa-stack">
            <i class="fa fa-square fa-stack-2x"></i>
            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
        </span>
    </a>
</script>
<script id="itemInventoryTemplate" type="text/html">
    <tr data-bind="click: $root.selectedInventory">
        <td data-bind="style: {backgroundColor: colour}"></td>
        <td>
            <span data-bind="text: name"></span><span class="user-subhead" data-bind="text:supplierCompanyName"></span>
        </td>
        <td data-bind="text: fullCategoryName"></td>
        <td>
            <span data-bind="text: weight"></span> <span data-bind="text: weightUnitName"></span>
            <br /><br />
            <span data-bind="text:perQtyQty"> Sheets</span>
        </td>
        <td>
            <!-- ko template: { name: 'editActionInventoryTemplate' } -->
            <!-- /ko -->
        </td>
        <td>
            <!-- ko template: { name: 'deleteActionInventoryTemplate' } -->
            <!-- /ko -->
        </td>
    </tr>
</script>

<div class="modal fade my-modal" id="roleRightsDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" data-bind="with:$root.selectedRole">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Role and Rights</h4>
            </div>
            <div class="row">

                <div class="col-lg-12 form-horizontal outerDiv-Padding">
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Role Title</label>
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="roleTitle" placeholder="Enter Role Title" data-bind="value:roleName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Description</label>
                        </div>
                        <div class="col-sm-6">
                            <textarea class="form-control" rows="3" data-bind="value: roleDescription" id="txtDesc" placeholder="Enter Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom: 0; padding-left: 0">
                        <div class="col-sm-1">

                        </div>
                        <div class="col-sm-5" style="padding-left: 0">
                            <label>Select Rights</label>
                        </div>
                        <div class="col-sm-5 text-right" style="padding-right: 44px;">
                            <input type="checkbox" class="bigcheckbox" style="float:right;" data-bind="checked: $root.isApplyToAll" />
                        </div>
                        <div class="col-sm-1">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1 col-lg-1"></div>
                        <div id="nestable2" class="col-sm-10 col-lg-10" style="border:1px solid #eeeeee;padding-right:15px;padding-left:15px; padding-bottom:20px;min-height:175px; max-height:200px;overflow-y:scroll;">
                            <ol id="productCategoryDialogCategories" class="dd-list">
                                <!-- ko template: { name: 'roleRightsTemplate', foreach: $root.accessRights } -->
                                <!-- /ko -->
                            </ol>
                        </div>
                        <div class="col-sm-1 col-lg-1"></div>
                    </div>
                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: $root.updateRoleRights, enable: hasChanges, css: { 'btn-warning': hasChanges }">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@* Role Rights Template Template *@
<script id="roleRightsTemplate" type="text/html">
    <li class="dd-item dd-item-list" data-bind="attr: { id: 'liElement-' + RightId }">
        <div class="dd-handle-list"><i class="fa fa-chevron-circle-right cursorShape"></i></div>
        <div class="dd-handle">
            <div>
                <span data-bind="text: RightName">
                </span>
                <input type="checkbox" class="bigcheckbox" style="float:right" data-bind="checked: IsSelected, event: { change: $root.checkeChanged }" />
            </div>
        </div>
    </li>
</script>


@* Wizard Popup ends here*@
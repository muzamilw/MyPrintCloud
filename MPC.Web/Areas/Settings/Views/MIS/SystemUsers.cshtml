@{
    ViewBag.Title = "System Users";
}
@section leftmenue {

}

<div class="row" id="systemUsersBinding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12" style="margin-bottom:-11px;">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0;">System Users</h1>
                </div>
                <div class="pull-right top-page-ui">
                    <a href="~/Settings" class="btn  btn-default" style="float: right;margin-bottom:10px;margin-left:5px;margin-right:-2px;">Close</a>
                    
                </div>
                <div style="margin-top:35px; ">
                    &nbsp;
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <h3>Update user information</h3>
                        <span class="group-header-description">List of users who use the system as per role assigend.</span>
                        <div style="height:20px;">
                            &nbsp;
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-lg-3">Full Name</th>
                                        <th class="col-lg-4">Email</th>
                                        <th class="col-lg-5">Role</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'usersListTemplate', foreach: usersList } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
    <input type="hidden" name="userList" id="userList" value="@ViewBag.User" />
    <script id="usersListTemplate" type="text/html">
        <tr data-bind=" click: $root.editUser" style="cursor: pointer">
            <td>
                <div style="float:left;display:inline;">
                    <a href="#" data-bind="text: fullName" style="cursor:pointer;" class="user-link"></a>
                </div>
            </td>
            <td>
                <span data-bind="text: email"></span>
            </td>
            <td>
                <span data-bind="text: roleName"></span>
            </td>

        </tr>
    </script>
    @Html.Partial("_SystemUserDialog")
</div>

@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")

@section Scripts{

    <script>
        require(["common/systemUser.view", "common/confirmation.view"]);
        
    </script>
}


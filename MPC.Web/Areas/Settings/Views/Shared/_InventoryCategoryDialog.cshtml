
@{
    ViewBag.Title = "_InventoryCategoryDialog";
}

<div class="modal fade" id="inventoryCategoryDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Inventory Category & Sub Category</h4>
            </div>
            <div class="col-lg-12" data-bind="with: $root.selectedStockCategory">
                <div class="col-lg-12 clearfix">
                    <header class="main-box-header clearfix"></header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th><a href="#"><span> Code</span></a></th>
                                    <th><input type="text" data-bind="value: code, validationTooltip: code" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Name</span></a></th>
                                    <th><input type="text" data-bind="value: name, validationTooltip: name" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Description</span></a></th>
                                    <th><input type="text" data-bind="value: description, validationTooltip: description" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Weight</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemWeight">
                                    </th>
                                
                                    <th><a href="#"><span>Color</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemColour">
                                    </th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Item Custom Size</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemSizeCustom">
                                    </th>
                                
                                    <th><a href="#"><span>Item Paper Size</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemPaperSize">
                                    </th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Coating Type</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCoatedType">
                                    </th>
                                
                                    <th><a href="#"><span>Coated</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCoated">
                                    </th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Exposure</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemExposure">
                                    </th>
                                
                                    <th><a href="#"><span>Processing Charge</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: itemCharge">
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: $root.closeEditDialog">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.savePaperSheet">OK</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="paperSheetDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Sheet Size</h4>
            </div>
            
            
            <div class="col-lg-12 form-horizontal outerDiv-Padding" data-bind="with: $root.selectedPaperSheet">
                <div class="form-horizontal clearfix">
                    <div class="col-lg-9">
                        <div class="form-group ">
                            <div class="col-lg-5 text-right">
                                
                                <label class="control-label text-right tooltip-float">Name</label>
                            </div>

                            <div class="col-lg-5">
                                <input type="text" class="form-control" data-bind="value: name, validationTooltip: name" />
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-lg-5 text-right">

                                @*<div class="bs-example-tooltips tooltip-float-width">

                    <a class="input-group-addon" tabindex="-1" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Name of the company or organization." data-original-title="" title="">
                        <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                    </a>

                </div>*@
                                @*<label for="txtCompanyName" class="control-label text-right tooltip-float">Unit of Length</label>*@

                            </div>

                            <div class="col-lg-6">
                                <div class="col-lg-12" style="margin-left:-10px;">
                                    <div class="radio" style="margin-bottom: 10px;">
                                        <input type="radio" name="optionsRadiosStoreType" id="optionsRadiosImperical" value="true" data-bind="checked: IsImperical">
                                        <label for="optionsRadiosImperical">
                                            Imperial Size (inch)
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <input type="radio" name="optionsRadiosStoreType" id="optionsRadiosMetric" value="false" data-bind="checked: IsImperical">
                                        <label for="optionsRadiosMetric">
                                            Metric Size (mm)
                                        </label>
                                        <span class="help-block text-right"></span>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="form-group">
                            <div class="col-lg-5 text-right">
                                
                                <label class="control-label text-right tooltip-float">Width</label>
                            </div>
                            <div class="col-lg-5">
                                <input type="text" id="papersheetwidth" onchange="papersheetwidth()" class="form-control" id="papersheetwidth" style="text-align:right;" data-bind="    value: width, validationTooltip: width" />
                            </div>
                            <div class="col-lg-2">
                                <!-- ko if: IsImperical() === "true" -->
                                (<label class="control-label">inch</label>)
                                <!-- /ko -->
                                <!-- ko if: IsImperical() === "false" -->
                                (<label class="control-label">mm</label>)
                                <!-- /ko -->
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="col-lg-3 text-left">
                                <!-- ko if: IsImperical() === "true" -->
                                (<label class="control-label">inch</label> )
                                <!-- /ko -->
                                <!-- ko if: IsImperical() === "false" -->
                                (<label class="control-label">mm</label> )
                                <!-- /ko -->
                            </div>

                        </div>*@

                        <div class="form-group">
                            <div class="col-lg-5 text-right">
                                
                                <label class="control-label text-right tooltip-float">Height</label>
                            </div>
                            <div class="col-lg-5">
                                <input type="text" class="form-control" id="papersheetheight" onchange="papersheetheight()" style="text-align:right;" data-bind="value: height, validationTooltip: height" />
                            </div>
                            <div class="col-lg-2">
                                <!-- ko if: IsImperical() === "true" -->
                                (<label class="control-label">inch</label>)
                                <!-- /ko -->
                                <!-- ko if: IsImperical() === "false" -->
                                (<label class="control-label">mm</label>)
                                <!-- /ko -->
                            </div>
                        </div>
                       
                        
                    </div>
                   
                </div>
            </div>

            <div class="modal-footer" data-bind="with: $root.selectedPaperSheet" style="padding-left:8px !important;">
                <button type="button" class="btn btn-primary" data-bind="    click: $root.savePaperSheet, css: { 'btn-warning': hasChanges }, enable: hasChanges">Save</button>
                <button type="button" class="btn btn-default removeLeftMargin" data-bind="click: $root.onClosePaperSheet">Close</button>
                <button type="button" class="btn btn-danger archiveButton" data-bind="click:$root.onDeletePaperSheet, enable:$root.selectedPaperSheet().paperSizeId() != undefined">Archive</button>
            </div>
        </div>
    </div>
</div>

<script>
    function papersheetwidth()
    {
        var num = parseFloat($("#papersheetwidth").val());
        var new_num = $("#papersheetwidth").val(num.toFixed(3));
    }
    function papersheetheight()
    {
        var num = parseFloat($("#papersheetheight").val());
        var new_num = $("#papersheetheight").val(num.toFixed(3));
    }
 
</script>

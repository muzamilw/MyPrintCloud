@{
    ViewBag.Title = "Paper Sheet Dialog";
}
<div class="modal fade" id="paperSheetDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Paper Sheet</h4>
            </div>
            <div class="col-lg-12" data-bind="with: $root.selectedPaperSheet">
                <div class="col-lg-12 clearfix">
                    <header class="main-box-header clearfix"></header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th><a href="#"><span> Name</span></a></th>
                                    <th><input type="text" data-bind="value: name, validationTooltip: name" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Height</span></a></th>
                                    <th><input type="text" data-bind="value: height, validationTooltip: height" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Width</span></a></th>
                                    <th><input type="text" data-bind="value: width, validationTooltip: width" /></th>
                                </tr>
                                <tr>
                                    <th><a href="#"><span>Is Default</span></a></th>
                                    <th>
                                        <input type="checkbox" id="isDefault" data-bind="checked: isArchived">
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: $root.closeEditDialog">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.savePaperSheet">OK</button>
            </div>
        </div>
    </div>
</div>
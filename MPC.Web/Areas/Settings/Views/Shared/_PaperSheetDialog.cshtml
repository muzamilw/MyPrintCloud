@{
    ViewBag.Title = "Paper Sheet Dialog";
}
<div class="modal fade" id="paperSheetDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Paper Sheet</h4>
            </div>
            <div class="clearfix">
            </div>
            <br />
            <div class=" form-horizontal clearfix" data-bind="with: $root.selectedPaperSheet">

                <header class="main-box-header clearfix"></header>

                <div class="form-horizontal clearfix">
                    <div class=" col-lg-4">
                        <div class="form-group ">
                            <div class="col-lg-5 text-right">

                                <label class="control-label text-right tooltip-float">Name</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="text" class="form-control" id="name" data-bind="value: name, validationTooltip: name">
                            </div>
                        </div>
                    </div>
                    <div class=" col-lg-4">
                        <div class="form-group ">
                            <div class="col-lg-5 text-right">

                                <label class="control-label text-right tooltip-float">Height</label>
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="name" data-bind="value: height,validationTooltip: height">
                            </div>
                        </div>
                    </div>
                    <div class=" col-lg-4">
                        <div class="form-group ">
                            <div class="col-lg-5 text-right">

                                <label class="control-label text-right tooltip-float">Width</label>
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="name" data-bind="value: width,validationTooltip: width">
                            </div>
                        </div>
                    </div>
                    <div class=" col-lg-4">
                        <div class="form-group ">
                            <div class="col-lg-5 text-right">

                                <label class="control-label text-right tooltip-float">Is Default</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="checkbox" id="isDefault" data-bind="checked: isArchived">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: $root.closeEditDialog">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.savePaperSheet">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productMarketBriefQuestionDialog" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 838px;" class="modal-dialog" data-bind="with: activeProductMarketQuestion">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Market Brief Question</h4>
            </div>
            <div class="col-lg-12 form-horizontal outerDiv-Padding">
                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Question Detail" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>
                        <label class="control-label text-right tooltip-float">Detail</label>
                    </div>
                    <div class="col-lg-8" style="padding-left:8px;padding-right:26px;">
                        <input type="text" class="form-control" placeholder="Title" data-bind="value: questionDetail, validationToolTip: questionDetail">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" tabindex="-1" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Allow Multiple Selection" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label class="control-label text-right tooltip-float">Allow Multiple Selection</label>

                    </div>

                    <div class="col-lg-6">
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchAllowMultipleSelectionForMarketBrief" data-bind="checked: isMultipleSelection">
                            <label class="onoffswitch-label" for="switchAllowMultipleSelectionForMarketBrief">
                                <div class="onoffswitch-inner"></div>
                                <div class="onoffswitch-switch"></div>
                            </label>
                        </div>
                        <span class="help-block text-right"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-12 clearfix">
                        <header class="main-box-header clearfix">
                            <div class="filter-block pull-right">

                                <a href="#" id="addMarketBriefAnswerBtn" class="btn btn-primary pull-right" data-bind="click: addProductMarketBriefAnswer">
                                    Add Answer
                                </a>
                            </div>
                        </header>
                        <div class="col-lg-12 table-responsive" style="padding-left:15px;padding-right:15px;">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-lg-11"><span>Answers</span></th>
                                        <th class="col-lg-1"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'marketingBriefAnswerTemplate', foreach: productMarketBriefAnswers } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger archiveButton" data-bind="click: $parent.onDeleteProductMarketBriefQuestion.bind($data), enable: id() !== 0">Remove</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.saveProductMarketBriefQuestion, enable: isValid() && hasChanges(), css: { 'btn-warning': hasChanges }">Save</button>
                <button type="button" class="btn btn-default" data-bind="click: $root.closeProductMarketBriefQuestionDialog" style="margin-left: 0;">Close</button>
            </div>
        </div>
    </div>

    @* Marketing Brief Answer Template *@
    <script id="marketingBriefAnswerTemplate" type="text/html">
        <tr>
            <td>
                <input type="text" class="form-control" data-bind="value: detail" />
            </td>
            <td class="text-center">
                <a class="table-link danger" data-bind="click: $parent.onDeleteProductMarketBriefAnswer.bind($data)">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
    </script>

</div>


@* Wizard Popup ends here*@
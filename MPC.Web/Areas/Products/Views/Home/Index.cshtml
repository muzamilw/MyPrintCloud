<div class="row" id="productBinding">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li><a href="~/Dashboard/Index">Home</a></li>
                        <li class="active"><span>Products</span></li>
                    </ol>
                    <div class="clearfix">
                        <h1 class="pull-left">Products</h1>

                    </div>

                    <div class="row">
                        @Html.Partial("Product/_Products")
                    </div>
                </div>
            </div>
        </div>
    </div>


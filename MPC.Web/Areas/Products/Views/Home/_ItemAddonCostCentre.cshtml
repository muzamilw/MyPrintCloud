<div class="modal fade" id="itemAddonCostCentreDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div id="itemAddonCostCentreDialogMainContainer" class="modal-dialog" data-bind="with: activeStockOption">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Item Addon Cost Centre</h4>
            </div>
            <div class="col-lg-12 form-horizontal outerDiv-Padding" data-bind="with: activeItemAddonCostCentre">
                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Cost Centre" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label class="control-label text-right tooltip-float">Cost Centre</label>

                    </div>

                    <div class="col-lg-3">
                        <select class="form-control" data-bind="options: $root.costCentres, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Select...', value: costCentreId"></select>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Cost Centre Type" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label class="control-label text-right tooltip-float">Cost Centre Type</label>

                    </div>

                    <div class="col-lg-3">
                        <input type="text" class="form-control" data-bind="value: costCentreType, enable: false" />
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" border 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Is Mandatory" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label class="control-label text-right tooltip-float">Is Mandatory</label>

                    </div>

                    <div class="col-lg-6">
                        <div>
                            <div class="onoffswitch">
                                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchMandatoryCostCentre" data-bind="checked: isMandatory">
                                <label class="onoffswitch-label" for="switchMandatoryCostCentre">
                                    <div class="onoffswitch-inner"></div>
                                    <div class="onoffswitch-switch"></div>
                                </label>
                            </div>
                            <span class="help-block text-right"></span>
                        </div>
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <hr/>
                <button type="button" class="btn btn-primary" data-bind="click: $parent.onSaveItemCostCentre">Save</button>
                <button type="button" class="btn btn-default" data-bind="click: $root.closeItemAddonCostCentreDialog" style="margin-left: 0">Close</button>

            </div>
        </div>
    </div>
</div>


@* Wizard Popup ends here*@
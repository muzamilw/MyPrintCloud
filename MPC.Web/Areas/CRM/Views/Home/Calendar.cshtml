@{
    ViewBag.Title = "MIS 2015 Calender";
}
@section leftmenue {
}
<div class="row" id="fullCalendarBinding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#">&nbsp;</a></li>
                </ol>
                <h1 style="padding-left:0px;">Calendar</h1>
                <div class="clearfix pull-left" style="padding-bottom: 1%">
                    <h5>Create Contacts, Customers and Suppliers. View system users calendars.  Create marketing emails.</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box-body main-box clearfix">
                    <div class="tabs-wrapper profile-tabs">
                        <ul class="nav nav-tabs">
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Contacts) { <text>active</text> }">
                                @Html.ActionLink("All Contacts", "Contacts", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Companies) { <text>active</text> }">
                                @Html.ActionLink("Companies", "Index", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Supplier) { <text>active</text> }">
                                @Html.ActionLink("Supplier", "SuppliersList", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.ToDoList) { <text>active</text> }">
                                @Html.ActionLink("To Do Lists", "ToDoList", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Calendar) { <text>active</text> }">
                                @*@Html.ActionLink("Calendar", "Calendar", "Home",)*@
                                <a href="#tab-Calendar" data-toggle="tab">Calendar</a>
                            </li>

                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.EMarketing) { <text>active</text> }">
                                @*@Html.ActionLink("
                                    ", "" , "Home")*@
                                @Html.ActionLink("E-Marketing", "EMarketing", "Home")
                            </li>
                            
                            
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab-Calendar">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div>
                                            <div>
                                                <div class="col-md-12 form-horizontal">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <div class="col-lg-4 text-right">
                                                                <div class="bs-example-tooltips tooltip-float-width">
                                                                    <a class="input-group-addon" href="#" data-bind="click: function(){}" data-trigger="focus" style="text-decoration: none; border: 0; cursor: pointer;" data-content="Select Owner" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                                                        <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                                                                    </a>
                                                                </div>
                                                                <label for="owner" class="control-label text-right tooltip-float">Show</label>
                                                            </div>
                                                            <div class="col-lg-8" style="padding-right:20px;">
                                                                <select class="form-control" id="owner" data-bind="options: $root.systemUsers, optionsText: 'FullName', optionsValue: 'SystemUserId',value:$root.selectedSystemUser,event:{ change: $root.onChangeSystemUser}"></select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">

                                                    </div>
                                                </div>

                                                <div id="calendar" data-bind="fullCalendar: $root.mycCalender, itemsList: $root.items" data-eventclass="label-primary"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @Html.Partial("~/Areas/CRM/Views/Home/_AddEditCalendarActivity.cshtml")
                            </div>
                            
                        </div>
                                </div>
                            </div>
                        </div>
        </div>

    </div>
</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/CRM/Views/Home/_UserProfileDetailsForContact.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_CompanySelector.cshtml")
<!-- /ko -->

@section Scripts {
    @*<script src="~/Content/themes/Centaurus/js/fullcalendar.min.js"></script>*@
    <script>
        require(["calendar/calendar.view", "common/companySelector.view", "crm/contacts.view"]);

    </script>
}

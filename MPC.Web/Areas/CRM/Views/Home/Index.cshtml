@{
    ViewBag.Title = "Companies List";
}
@section leftmenue {
}
<div class="row" id="crmBindingRoot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">Home</a></li>
                    <li class="active"><span>Customers</span></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left">Customers</h1>
                </div>
                <div class="pull-right top-page-ui">
                    <a class="btn btn-primary" data-bind="click: $root.onCreateNewStore">
                        <i class="fa fa-plus-circle fa-lg"></i>&nbsp;Add Customer
                    </a>
                </div>
                <div id="addStore">
                    &nbsp;
                </div> <br />
                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box-body main-box clearfix">
                    <div class="tabs-wrapper profile-tabs">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab-Prospect" data-toggle="tab" data-bind="click: function(){$root.getCustomers(0);}">Prospects</a></li>
                            <li><a href="#tab-Customer" data-toggle="tab" data-bind="click: function(){$root.getCustomers(1);}">Customer</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab-Prospect">
                                <div class="main-box-body main-box clearfix">
                                    <div class="table-responsive">
                                        <table class="table user-list">
                                            <thead>
                                                <tr>
                                                    <th class="col-lg-1"></th>
                                                    <th class="col-lg-3"><span>Company</span></th>
                                                    <th class="col-lg-2"><span>Created</span></th>
                                                    @*<th class="col-lg-2"><span>Status</span></th>*@
                                                    <th class="col-lg-2"><span>Email</span></th>
                                                    @*<th class="col-lg-2">&nbsp;</th>*@

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- ko foreach: $root.customersForListView -->
                                                <tr data-bind="click: $root.selectStore">
                                                    <td>
                                                        <img data-bind="attr: { src: '@Url.Content("~/")' + storeImageFileBinary() }" alt="" />
                                                    </td>
                                                    <td>
                                                        <a href="#" class="store-user-link" data-bind="text:name, click: $root.onEditItem"></a>
                                                        <span class="user-subhead"></span>
                                                    </td>
                                                    <td>
                                                        <p data-bind="dateString: creationdate, datePattern: 'DD/MM/YYYY'"></p>
                                                    </td>
                                                    @*<td>
                                                            <span data-bind="text:status, css:statusClass"></span>
                                                        </td>*@
                                                    <td>
                                                        <a>
                                                            <p data-bind="text:email"></p>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <!-- /ko -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div id="pagerDiv" class="pull-right">
                                    <!-- ko with: prospectPager -->
                                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                    <!-- /ko -->
                                </div>
                            </div>
                            <div class="tab-pane fade in" id="tab-Customer">
                                <div class="main-box-body main-box clearfix">
                                    <div class="table-responsive">
                                        <table class="table user-list">
                                            <thead>
                                                <tr>
                                                    <th class="col-lg-1"></th>
                                                    <th class="col-lg-3"><span>Company</span></th>
                                                    <th class="col-lg-2"><span>Created</span></th>
                                                    @*<th class="col-lg-2"><span>Status</span></th>*@
                                                    <th class="col-lg-2"><span>Email</span></th>
                                                    @*<th class="col-lg-2">&nbsp;</th>*@

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- ko foreach: $root.customersForListView -->
                                                <tr data-bind="click: $root.selectStore">
                                                    <td>
                                                        <img data-bind="attr: { src: '@Url.Content("~/")' + storeImageFileBinary() }" alt="" />
                                                    </td>
                                                    <td>
                                                        <a href="#" class="store-user-link" data-bind="text:name, click: $root.onEditItem"></a>
                                                        <span class="user-subhead"></span>
                                                    </td>
                                                    <td>
                                                        <p data-bind="dateString: creationdate"></p>
                                                    </td>
                                                    @*<td>
                                                            <span data-bind="text:status, css:statusClass"></span>
                                                        </td>*@
                                                    <td>
                                                        <a>
                                                            <p data-bind="text:email"></p>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <!-- /ko -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div id="pagerDiv" class="pull-right">
                                    <!-- ko with: customerPager -->
                                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                                    <!-- /ko -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                    </div>
                </div>
            </div>

        </div>
        <script id="filterTemplate" type="text/html">
            <div class="filter-body" id="filter">
                <form data-bind="submit:$root.searchButtonHandler">
                    <div class="filter-block pull-right">
                        <div class="form-group pull-right">
                            <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.searchFilter">
                            <i class="fa fa-search search-icon" data-bind="click: $root.searchButtonHandler"></i>
                        </div>

                    </div>
                </form>
                <div class="clearfix">
                </div>
            </div>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/CRM/Views/Home/CompaniesDetail.cshtml");
    }
</div>
@section Scripts{
    <script>
        require(["crm/crm.view", "common/confirmation.view"]);
        $(function () {
            $('#licrm').addClass('active');
        });
    </script>
}

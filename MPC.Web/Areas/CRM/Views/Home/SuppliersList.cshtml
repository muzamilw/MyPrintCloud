@{
    ViewBag.Title = "Suppliers";
}
<div class="row" id="crmSuppliers">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">

        <div class="row">
            <div class="col-lg-12" id="topArea">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">Home</a></li>
                    <li class="active"><span>Suppliers</span></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left">Suppliers</h1>
                </div>
                <div class="pull-right top-page-ui">
                    <a class="btn btn-primary" data-bind="click: $root.onCreateNewStore">
                        <i class="fa fa-plus-circle fa-lg"></i>&nbsp;Add Supplier
                    </a>
                </div>
                <div id="addStore">
                    &nbsp;
                </div>
                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        @*<th><span>Company</span></th>
                                            <th><span>Created</span></th>
                                            <th class="text-center"><span>Status</span></th>
                                            <th><span>Email</span></th>
                                            <th>&nbsp;</th>*@

                                        <th class="col-lg-1"></th>
                                        <th class="col-lg-3"><span>Company</span></th>
                                        <th class="col-lg-2"><span>Created</span></th>
                                        <th class="col-lg-2"><span>Status</span></th>
                                        <th class="col-lg-2"><span>Email</span></th>
                                        <th class="col-lg-2">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: $root.templateToUseSupplier , foreach: $root.suppliers } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDiv">
                    <!-- ko with: supplierpager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
    </div>
    <script id="actionsTemplate" type="text/html">
        <a class="table-link" data-bind="click : $root.onEditItem" style="float: right">
            <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
            </span>
        </a>
    </script>
    <script id="itemSupplierTemplate" type="text/html">
        <tr data-bind="click: $root.selectStore, css: { selectedRow: $data === $root.selectedSupplier}">
            <td>
                <img data-bind="attr: { src: storeImageFileBinary }" alt="" />
            </td>
            <td>
                <a href="#" class="user-link" data-bind="text: name,click : $root.onEditItem"></a>
                <span class="user-subhead">Supplier</span>
            </td>
            <td data-bind="text: createdDate"></td>
            <td>
                <!-- ko if: status() == 1 -->
                <span class="label label-success">Active</span>
                <!-- /ko -->
                <!-- ko if: status() != 1 -->
                <span class="label label-danger">In-Active</span>
                <!-- /ko -->
            </td>
            <td>
                <a href="~/CRM/SupplierDetail">
                    jack@nicholson
                </a>
            </td>
            <td style="width: 20%;">
                @*<a href="~/CRM/SupplierDetail" class="table-link">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                    </span>
                </a>*@
                <a class="table-link" data-bind="click: $root.onEditItem">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                @*<a href="#" class="table-link danger">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>*@
            </td>
        </tr>
    </script>
    @* Filter Template *@
    <script id="filterTemplate" type="text/html">
        <div class="filter-body" id="filter">
            <div class="filter-block pull-left">
                <div class="pull-left spanfilterlbl">
                    Search &nbsp;
                </div>
                <div class="form-group pull-left">
                    <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.searchSupplierFilter">
                    <i class="fa fa-search search-icon"></i>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary" data-bind="click:$root.getSuppliers">Search</button>
                    <button type="reset" class="btn btn-default" data-bind="click:$root.resetSupplierFilterSection">Reset</button>
                </div>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </script>
    @{
        Html.RenderPartial("~/Areas/CRM/Views/Home/CompaniesDetail.cshtml");
    }
</div>
@section Scripts{
  
<script>
    require(["crm/crm.supplier.view", "common/confirmation.view"]);
    $(function () {
        $('#licrm').addClass('active');
    });
</script>

}

@{
    ViewBag.Title = "To Do List";
}
@section leftmenue {
}
<div class="row" id="toDoListBinding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#">&nbsp;</a></li>

                </ol>
                <h1 style="padding-left:0px;">To Do Lists</h1>
                <div class="clearfix pull-left" style="padding-bottom: 1%">
                    <span style="color: #696969">Create Contacts, Customers and Suppliers. Add to-do items and update shared calendars.</span>
                </div>
                <div style="clear: both;max-height: 14px;">
                    &nbsp;
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box-body main-box clearfix">
                    <div class="tabs-wrapper profile-tabs">
                        <ul class="nav nav-tabs">
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Contacts) { <text>active</text> }">
                                @Html.ActionLink("Public Store Registered Users", "Contacts", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Companies) { <text>active</text> }">
                                @Html.ActionLink("Companies", "Index", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Supplier) { <text>active</text> }">
                                @Html.ActionLink("Supplier", "SuppliersList", "Home")
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.ToDoList) { <text>active</text> }">
                                @*@Html.ActionLink("To Do Lists", "ToDoList", "Home")*@
                                <a href="#tab-ToDoList" data-toggle="tab">Calender Events</a>
                            </li>
                            <li class="@if (ViewBag.ActiveTab == MPC.Models.Common.ActiveModuleMenuItem.Calendar) { <text>active</text> }">
                                @Html.ActionLink("Calendar", "Calendar", "Home")
                                @*<a href="#tab-Calendar" data-toggle="tab">Calendar</a>*@
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="tab-ToDoList">
                                <div class="row">
                                    <div class="col-md-12" style="margin-top:10px;">
                                        <div class="tabsdescriptions">
                                            <span>Stay organized with to do items for each member of your team, assign follow up events that appear in your group calendar.</span>
                                        </div>
                                        <div>
                                            <div class="main-box-body clearfix" style="padding-left:12px;padding-right:12px;">
                                                <div class="col-md-12 form-horizontal">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <div class="col-lg-4 text-right" style=" margin-left: -9px; padding-left: 4px">
                                                                <label for="owner" style="float:left"class="control-label text-right tooltip-float">Show Calendar Events</label>
                                                            </div>
                                                            <div class="col-lg-8">
                                                                <select style="width: 65%;"class="form-control" id="owner" data-bind="options: $root.systemUsers, optionsCaption: 'All', optionsText: 'FullName', optionsValue: 'SystemUserId',value:$root.selectedSystemUser,event:{ change: $root.onChangeSystemUser}"></select>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-md-12" style="padding-right:0px; padding-left:0px;">

                                                    <div class="col-lg-3" style="padding-left:0px;">
                                                        <span class="fc-button fc-button-prev fc-state-default fc-corner-left" data-bind="click:$root.previousMonth"><span class="fc-text-arrow">‹</span></span>
                                                        <span class="fc-button fc-button-next fc-state-default fc-corner-right" data-bind="click:$root.nextMonth"><span class="fc-text-arrow">›</span></span>
                                                        <span class="fc-button fc-button-today fc-state-default fc-corner-left" style="height:38px;" data-bind="click:$root.todayActivities">today</span>
                                                    </div>
                                                    <div class="col-lg-7" style="text-align:center;padding-left:0px;">
                                                        <h2 class="fc-header-title" style="padding-right:10px;" data-bind="text:$root.dateDisplay"></h2>
                                                    </div>
                                                    <div class="col-lg-2" style="padding-right:0px;">
                                                        <div class="btn-group pull-right" data-bind="click:$root.addActivity">
                                                            <button class="btn btn-primary">
                                                                <i class="fa  fa-lg"></i>&nbsp;Add New Event
                                                            </button>
                                                        </div>
                                                    </div>

                                                </div>
                                                <br />

                                            </div>
                                            <div class="row">
                                                <div class="main-box-body clearfix">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th><span>Activity Type</span></th>
                                                                    <th><span>Description</span></th>
                                                                    <th><span>Start Date</span></th>
                                                                    <th><span>End Date</span></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <!-- ko template: { name: 'todoListItemTemplate' , foreach: $root.items } -->
                                                                <!-- /ko -->
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @Html.Partial("~/Areas/CRM/Views/Home/_AddEditCalendarActivity.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/CRM/Views/Home/_UserProfileDetailsForContact.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_CompanySelector.cshtml")
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section Scripts{


    <script>
        require(["toDoList/toDoList.view", "common/companySelector.view", "crm/contacts.view", "common/confirmation.view"]);
    </script>
}

<script id="todoListItemTemplate" type="text/html">
    <tr data-bind="click : $root.onEditActivity" style="cursor: pointer">
        <td data-bind="text:actionby"></td>
        <td><a href="#" class="store-user-link" data-bind="text: activityNotes"></a></td>
        <td data-bind="text:startDateTime"></td>
        <td data-bind="text:endDateTime"></td>
    </tr>
</script>
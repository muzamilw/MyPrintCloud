<script id="itemTemplate" type="text/html">
    <li data-bind="drag: $root.dragged">
        <div class="col-lg-12">
            <div class="form-group">
                <div data-bind="text:companyName">
                </div>
            </div>
            <div class="form-group">
                <div data-bind="text:code">
                </div>
            </div>
            <div class="form-group">
                <div data-bind="text:productName">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6">
                    <label class="control-label">Qty:</label>
                </div>
                <div class="col-lg-6">
                    <label class="control-label text-right" data-bind="text:qty1"></label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6">
                    <label class="control-label">Selling Price:</label>
                </div>
                <div class="col-lg-6">
                    <label class="control-label text-right" data-bind="text:qty1NetTotal"></label>
                </div>
            </div>
            <div class="form-group">
                <div>
                    Expected Shipping Date(end)
                </div>
            </div>
            <div class="form-group">
                <div data-bind="dateString:jobEstimatedCompletionDateTime">
                </div>
                <div>
                    <div class="btn btn-primary">Open</div>
                </div>
            </div>
            <hr />
        </div>
    </li>

</script>



                                                    <!-- /ko -->
                                                </ol>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

@section Scripts{
    <script>
        require(["itemJobStatus/itemJobStatus.view"]);
        $(function () {
            $('#listores').addClass('active');
        });
    </script>
}



<script id="needAssigningItemTemplate" type="text/html">
    <li data-bind="if: (statusId()=== 11), drag: $root.dragged">
        <div class="col-lg-12">
            <div class="form-group formGroupSmall">
                <div style="color: #1cc7ed;" data-bind="text:companyName">
                </div>
            </div>
            <div class="form-group code">
                <div data-bind="text:code">
                </div>
            </div>
            <div class="form-group formGroupSmall">
                <div data-bind="text:productName">
                </div>
            </div>
            <div class="form-group formGroupSmaller">
                <div class="col-lg-6" style="padding-left: 0px;">
                    <label class="control-label">Qty :</label>
                </div>
                <div class="col-lg-6">
                    <label class="control-label text-right" data-bind="text:qty1"></label>
                </div>
            </div>
            <div class="form-group formGroupSmaller">
                <div style="float: left;">
                    <label class="control-label labelToPadding">Selling Price :</label>
                </div>
                <div>
                    <label class="labelToPadding" data-bind=" text:$root.currencySymbol"></label><label class="control-label text-right labelToPadding" data-bind="text:qty1NetTotal"></label>
                </div>
            </div>
            <div class="form-group formGroupSmaller">
                <div>
                    <label>Expected Shipping Date(end)</label>
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 3px;">
                <div class="col-lg-8" data-bind="dateString:jobEstimatedCompletionDateTime" style="padding-left :0px;">
                </div>
                <div>
                    @*<div class="btn btn-primary openBtn">Open</div>*@
                    <a class="btn btn-primary openBtn" data-bind="attr: {href:'/mis/orders/home?id='+estimateId() }">Open</a>
                </div>
            </div>
            <div class="itemFooterHighlight">
            </div>

        </div>
    </li>

</script>


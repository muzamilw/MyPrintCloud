    </script>
}



<script id="needAssigningItemTemplate" type="text/html">
        <li data-bind="if: (statusId()=== 11), drag: $root.dragged" style="">
            <div class="col-lg-12" style=" background-color: white; border-radius: 7px; margin-top: 5%; margin-bottom: 2%;">
                <div class="form-group formGroupSmall" style="margin-left: 0%;">
                    <div style="color: #1cc7ed;" data-bind="text:companyName">
                    </div>
                </div>
                <div class="form-group code" style="margin-left: 0%;">
                    <div style=" color: lightslategray;" data-bind="text:code">
                    </div>
                </div>
                <div class="form-group formGroupSmall" style="margin-left: 0%;">
                    <div data-bind="text:productName">
                    </div>
                </div>
                <div class="form-group formGroupSmaller" style="margin-left: 0%;">
                    <div class="col-lg-5" style="padding-left: 0px; ">
                        <label style=" color: lightslategray;" class="control-label">Qty :</label>
                    </div>
                    <div class="col-lg-6">
                        <label style=" color: lightslategray;" class="control-label text-right" data-bind="text:qty1"></label>
                    </div>
                </div>
                <div class="form-group formGroupSmaller" style="margin-left: 0%;">
                    <div style="float: left;">
                        <label style=" color: lightslategray;" class="control-label labelToPadding">Selling Price :</label>
                    </div>
                    <div>
                        <label style="color: lightslategray; margin-left: 8px;" class="labelToPadding" data-bind=" text:$root.currencySymbol()+qty1NetTotal()"></label>
                    </div>
                </div>
                <div class="form-group formGroupSmaller" style="margin-left: 0%;">
                    <div>
                        <label style=" color: lightslategray;">Expected Shipping Date(end)</label>
                    </div>
                </div>
                <div class="form-group" style="margin-bottom: 3px; margin-left: 0%;">
                    <div class="col-lg-8" data-bind="dateString:jobEstimatedCompletionDateTime" style="padding-left: 0px; font-weight: bold; color: black;">
                    </div>
                    <div>
                        <a class="btn btn-primary openBtn" data-bind="attr: {href:'/mis/orders/home?id='+estimateId() },click: function() { return true;}, clickBubble: false" target="_blank">Open</a>
                    </div>
                </div>
            </div>
        </li>
</script>


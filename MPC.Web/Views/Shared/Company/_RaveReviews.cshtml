
@{
    ViewBag.Title = "Rave Reviews";
}



<div class="modal fade" id="rave" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" >&times;</button>
                <h4 class="modal-title">Rave Review Details</h4>
            </div>
            <div class="col-lg-12 outerDiv-Padding form-horizontal" data-bind="with: $root.selectedRaveReview()">

                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;border:0;" data-container="body" data-toggle="popover" data-placement="right" data-content="Enter Review Name" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>

                        <label for="txtProductName" class="control-label text-right tooltip-float">Review Name</label>

                    </div>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="txtProductName" placeholder="Enter Review Name" data-bind="value: reviewBy">
                        <span class="help-block text-right"></span>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;border:0;"  data-container="body" data-toggle="popover" data-placement="right" data-content="Enter Review" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>

                        <label for="txtProductName" class="control-label text-right tooltip-float">Review</label>

                    </div>

                    <div class="col-lg-6">
                        <textarea class="form-control"  id="txtNotes1" rows="5" data-bind="value: review">
                        </textarea>

                        <span class="help-block text-right"></span>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-lg-3 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer; border:0" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>


                        <label for="txtSortOrder" class="control-label text-right tooltip-float">Sort Order</label>

                    </div>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="txtSortOrder" placeholder="Enter Sort Order" data-bind="value: sortOrder">
                        <span class="help-block text-right">Sort Order in rave revies</span>
                    </div>

                </div>
               

                <div class="form-group">
                    <div class="col-lg-3 text-right">
                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer; border: 0" data-container="body" data-toggle="popover" data-placement="right" data-content="Enable Stock Label" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span>
                            </a>

                        </div>





                        <label class="control-label text-right tooltip-float" for="switchFeaturedProduct">Display</label>

                    </div>

                    <div class="col-lg-6">
                        <div class="onoffswitch">
                            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchDisplay" checked>
                            <label class="onoffswitch-label" for="switchDisplay">
                                <div class="onoffswitch-inner"></div>
                                <div class="onoffswitch-switch"></div>
                            </label>
                        </div>
                        <span class="help-block text-right"></span>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: $root.onCloseRaveReview()">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@* Wizard Popup ends here*@
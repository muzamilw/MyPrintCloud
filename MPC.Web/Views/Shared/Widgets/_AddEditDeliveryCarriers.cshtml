@{
    ViewBag.Title = "Add/Edit Delivery Carriers";
}



<div class="modal fade" id="myAddEditDelvCarrierModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width: 838px;" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit Delivery Carriers</h4>
            </div>

            <div class="col-lg-12 form-horizontal outerDiv-Padding">

                <div class="form-group">
                    <div class="col-lg-4 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span></a>

                        </div>


                        <label for="txtCName" class="control-label text-right tooltip-float">Name</label>

                    </div>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="txtCName">
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-lg-4 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span></a>

                        </div>


                        <label for="txtBillingCInfo" class="control-label text-right tooltip-float">Billing Information</label>

                    </div>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="txtBillingCInfo">
                    </div>

                </div>
                 <div class="form-group">
                    <div class="col-lg-4 text-right">

                        <div class="bs-example-tooltips tooltip-float-width">

                            <a class="input-group-addon" style="text-decoration: none; border: 0; cursor: pointer;" data-container="body" data-toggle="popover" data-placement="right" data-content="Sort Order in Category" data-original-title="" title="">
                                <span class="label label-circle-question">&nbsp;&nbsp;?&nbsp;&nbsp;</span></a>

                        </div>


                        <label for="txtTrackingCInfo" class="control-label text-right tooltip-float">Tracking Information</label>

                    </div>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="txtTrackingCInfo">
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>



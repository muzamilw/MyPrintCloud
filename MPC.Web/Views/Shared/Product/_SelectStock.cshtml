@{
    ViewBag.Title = "Stocks List";
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width:838px;" class="modal-dialog" data-bind="with: $root.stockItemList">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Stocks List</h4>
            </div>
            <div class="col-lg-12">

                <div class="col-lg-12 clearfix">
                    <header class="main-box-header clearfix">
                        <div class="filter-block pull-right">
                            <div class="form-group pull-left">
                                <input type="text" class="form-control" placeholder="Search...">
                                <i class="fa fa-search search-icon"></i>
                            </div>

                        </div>
                    </header>
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th><a href="#"><span>Stock Name</span></a></th>
                                        <th><a href="#"><span>Category</span></a></th>
                                        <th><a href="#" class="asc"><span>Location</span></a></th>
                                        <th>Weight</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'stockItemListTemplate' , foreach: $root.stockItemList } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <footer class="main-box-header pull-right">
                        <div id="pagerDiv">
                            <!-- ko with: $root.stockItemgPager -->
                            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                            <!-- /ko -->
                        </div>
                    </footer>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script id="stockItemListTemplate" type="text/html">
    <tr data-bind="event: { dblclick: $root.OnSelectDefaultPaper}">
        <td data-bind="text:name, event: { dblclick: $root.OnSelectDefaultPaper}"></td>
        <td data-bind="text:category , event: { dblclick: $root.OnSelectDefaultPaper}">  </td>
        <td data-bind="text: location, event: { dblclick: $root.OnSelectDefaultPaper}"></td>
        <td data-bind="text: weight, event: { dblclick: $root.OnSelectDefaultPaper}"></td>
        @*<td data-bind="text: weight, event: { dblclick: function(){alert('test');}}"></td>*@

    </tr>
</script>

